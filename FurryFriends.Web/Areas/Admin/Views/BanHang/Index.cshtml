@model IEnumerable<FurryFriends.API.Models.DTO.BanHang.HoaDonBanHangDto>

@{
    ViewData["Title"] = "Lịch sử Hóa đơn";
}

<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Lịch Sử Hóa Đơn</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="d-flex justify-content-end mb-3">
            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i> Tạo Hóa Đơn Mới
                </button>
            </form>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Mã Hóa Đơn</th>
                    <th>Khách Hàng</th>
                    <th>Ngày Tạo</th>
                    <th class="text-end">Tổng Tiền</th>
                    <th>Trạng Thái</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.MaHoaDon</td>
                        <td>@item.KhachHang.TenKhachHang</td>
                        <td>@item.NgayTao.ToString("dd/MM/yyyy HH:mm")</td>
                        <td class="text-end">@item.ThanhTien.ToString("N0") đ</td>
                        <td>
                            <span class="badge @(item.TrangThai == "Đã thanh toán" ? "bg-success" : (item.TrangThai == "Đã hủy" ? "bg-danger" : "bg-warning"))">
                                @item.TrangThai
                            </span>
                        </td>
                        <td>
                            <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.HoaDonId">
                                <i class="bi bi-pencil-square"></i> Chi Tiết
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>