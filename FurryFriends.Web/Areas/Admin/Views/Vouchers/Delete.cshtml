@model FurryFriends.API.Models.Voucher
@{
    ViewData["Title"] = "Xóa voucher";
}
<div class="top-bar" style="padding-left: 50px;">
    <h1>@ViewData["Title"]</h1>
</div>
<nav aria-label="breadcrumb" class="mb-3" style="padding-left: 50px;">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Quản lý Voucher</a></li>
        <li class="breadcrumb-item active">Xóa</li>
    </ol>
</nav>
<div class="form-container" style="margin-left: 10px; margin-right: 40px;">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white border-0 py-3">
            <div class="d-flex align-items-center">
                <div class="card-icon primary me-3">
                    <i class="fas fa-trash"></i>
                </div>
                <div>
                    <h5 class="card-title mb-0">Xác nhận xóa voucher</h5>
                    <small class="text-muted">Bạn có chắc chắn muốn xóa voucher này không?</small>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <dl class="row">
                <dt class="col-sm-3">Tên voucher</dt>
                <dd class="col-sm-9">@Model.TenVoucher</dd>
                <dt class="col-sm-3">Phần trăm giảm</dt>
                <dd class="col-sm-9">@Model.PhanTramGiam%</dd>
                <dt class="col-sm-3">Ngày bắt đầu</dt>
                <dd class="col-sm-9">@Model.NgayBatDau.ToString("dd/MM/yyyy")</dd>
                <dt class="col-sm-3">Ngày kết thúc</dt>
                <dd class="col-sm-9">@Model.NgayKetThuc.ToString("dd/MM/yyyy")</dd>
                <dt class="col-sm-3">Số lượng</dt>
                <dd class="col-sm-9">@Model.SoLuong</dd>
            </dl>
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="VoucherId" />
                <div class="d-flex justify-content-end gap-3 mt-5 pt-4 border-top">
                    <a asp-action="Index" class="btn btn-light btn-lg px-4">
                        <i class="fas fa-arrow-left me-2"></i>Quay lại
                    </a>
                    <button type="submit" class="btn btn-danger btn-lg px-4">
                        <i class="fas fa-trash me-2"></i>Xóa
                    </button>
                </div>
            </form>
        </div>
    </div>
</div> 