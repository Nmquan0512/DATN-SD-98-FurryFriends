<div class="modal fade" id="createModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-3 shadow">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">Thêm kích cỡ</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4">
                <form id="createForm" novalidate>
                    <div class="mb-3">
                        <label for="CreateTenKichCo" class="form-label">Tên kích cỡ <span class="text-danger">*</span></label>
                        <input type="text" id="CreateTenKichCo" class="form-control" required />
                        <div class="invalid-feedback">Vui lòng nhập tên kích cỡ.</div>
                    </div>
                    <div class="mb-3">
                        <label for="CreateMoTa" class="form-label">Mô tả</label>
                        <textarea id="CreateMoTa" class="form-control" rows="3"></textarea>
                    </div>
                    <div class="mb-3">
                        <label for="CreateTrangThai" class="form-label">Trạng thái</label>
                        <select id="CreateTrangThai" class="form-select">
                            <option value="true">Hiện</option>
                            <option value="false">Ẩn</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button class="btn btn-primary" onclick="submitCreate()">Lưu</button>
            </div>
        </div>
    </div>
</div>
