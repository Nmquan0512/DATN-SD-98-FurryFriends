<div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-3 shadow">
            <div class="modal-header bg-warning text-dark">
                <h5 class="modal-title">Sửa màu sắc</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body p-4">
                <form id="editForm" novalidate>
                    <input type="hidden" id="EditMauSacId" />
                    <div class="mb-3">
                        <label for="EditTenMau" class="form-label">Tên màu <span class="text-danger">*</span></label>
                        <input type="text" id="EditTenMau" class="form-control" required />
                        <div class="invalid-feedback">Vui lòng nhập tên màu.</div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Mã màu <span class="text-danger">*</span></label>
                        <div class="input-group">
                            <input type="text" id="EditMaMau" class="form-control" required />
                            <input type="color" id="EditColorPicker" class="form-control form-control-color" title="Chọn màu" />
                        </div>
                        <div class="form-text">Nhập mã màu hoặc chọn từ công cụ.</div>
                        <div class="invalid-feedback">Vui lòng nhập mã màu.</div>
                    </div>

                    <div class="mb-3">
                        <label for="EditMoTa" class="form-label">Mô tả</label>
                        <textarea id="EditMoTa" class="form-control" rows="3"></textarea>
                    </div>

                    <div class="mb-3">
                        <label for="EditTrangThai" class="form-label">Trạng thái</label>
                        <select id="EditTrangThai" class="form-select">
                            <option value="true">Hiện</option>
                            <option value="false">Ẩn</option>
                        </select>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                <button class="btn btn-warning text-white" onclick="submitEdit()">Lưu</button>
            </div>
        </div>
    </div>
</div>
