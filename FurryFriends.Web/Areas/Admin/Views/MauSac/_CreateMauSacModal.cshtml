<div class="modal fade" id="createModal" tabindex="-1" aria-labelledby="createModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="createForm" onsubmit="event.preventDefault(); submitCreate();">
                @Html.AntiForgeryToken()
                <div class="modal-header bg-success text-white">
                    <h5 class="modal-title">Thêm màu sắc</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label>Tên màu</label>
                        <input id="CreateTenMau" name="TenMau" class="form-control" required />
                    </div>
                    <div class="mb-3">
                        <label>Mã màu</label>
                        <div class="input-group">
                            <input id="CreateMaMau" name="MaMau" class="form-control" required />
                            <span class="input-group-text p-0">
                                <input type="color" id="CreateColorPicker" style="width:40px;height:100%;border:none;" />
                            </span>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label>Mô tả</label>
                        <textarea id="CreateMoTa" name="MoTa" class="form-control"></textarea>
                    </div>
                    <div class="mb-3">
                        <label>Trạng thái</label>
                        <select id="CreateTrangThai" name="TrangThai" class="form-select">
                            <option value="true">Hiện</option>
                            <option value="false">Ẩn</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-success">Thêm</button>
                </div>
            </form>
        </div>
    </div>
</div>
