@model FurryFriends.API.Models.DTO.SanPhamDTO
@using Microsoft.AspNetCore.Mvc.Rendering
@using FurryFriends.API.Models.Enums
@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
    var isDoAn = Model.LoaiSanPham == LoaiSanPhamEnum.DoAn.ToString();
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
<div class="container mt-4">
    <div class="card shadow-sm rounded-3">
        <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
            <h1>@ViewData["Title"]</h1>
            <a href="/Admin/SanPham" class="btn btn-light btn-sm">
                <i class="bi bi-arrow-left-circle me-1"></i>Quay lại danh sách
            </a>
        </div>
        <div class="card-body p-4">
            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="SanPhamId" />
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label class="form-label">Tên sản phẩm</label>
                        <input asp-for="TenSanPham" class="form-control" required />
                        <span asp-validation-for="TenSanPham" class="text-danger"></span>
                    </div>

                    <div class="col-md-3">
                        <label class="form-label">Loại sản phẩm</label>
                        <select asp-for="LoaiSanPham" class="form-select" id="LoaiSanPham" onchange="onLoaiChange()">
                            <option value="">-- Chọn loại --</option>
                            <option value="DoAn" selected="@(Model.LoaiSanPham == LoaiSanPhamEnum.DoAn.ToString())">Đồ ăn</option>
                            <option value="DoDung" selected="@(Model.LoaiSanPham == LoaiSanPhamEnum.DoDung.ToString())">Đồ dùng</option>
                        </select>
                        <span asp-validation-for="LoaiSanPham" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6" id="thanhPhanDiv" style="display:@(isDoAn ? "block" : "none")">
                        <label class="form-label">Thành phần</label>
                        <select asp-for="ThanhPhanIds" class="form-select" multiple>
                            @foreach (var item in ViewBag.ThanhPhans as List<SelectListItem>)
                            {
                                <option value="@item.Value" selected="@(Model.ThanhPhanIds?.Contains(Guid.Parse(item.Value)) == true ? "selected" : null)">@item.Text</option>
                            }
                        </select>
                    </div>
                    <div class="col-md-6" id="chatLieuDiv" style="display:@(!isDoAn ? "block" : "none")">
                        <label class="form-label">Chất liệu</label>
                        <select asp-for="ChatLieuIds" class="form-select" multiple>
                            @foreach (var item in ViewBag.ChatLieus as List<SelectListItem>)
                            {
                                <option value="@item.Value" selected="@(Model.ChatLieuIds?.Contains(Guid.Parse(item.Value)) == true ? "selected" : null)">@item.Text</option>
                            }
                        </select>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label">Thương hiệu</label>
                    <select asp-for="ThuongHieuId" class="form-select">
                        <option value="">-- Chọn thương hiệu --</option>
                        @foreach (var item in ViewBag.ThuongHieus as List<SelectListItem>)
                        {
                            <option value="@item.Value" selected="@(item.Value == Model.ThuongHieuId.ToString() ? "selected" : null)">@item.Text</option>
                        }
                    </select>
                    <span asp-validation-for="ThuongHieuId" class="text-danger"></span>
                </div>

                <div class="form-check form-switch mb-3">
                    <input asp-for="TrangThai" class="form-check-input" />
                    <label class="form-check-label">Trạng thái hiển thị</label>
                </div>

                <button type="submit" class="btn btn-warning">
                    <i class="bi bi-save me-1"></i>Cập nhật sản phẩm
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function onLoaiChange() {
            const loai = document.getElementById("LoaiSanPham").value;
            document.getElementById("thanhPhanDiv").style.display = loai === "DoAn" ? 'block' : 'none';
            document.getElementById("chatLieuDiv").style.display = loai === "DoDung" ? 'block' : 'none';
        }
    </script>
}
