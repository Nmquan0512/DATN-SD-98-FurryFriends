@model FurryFriends.API.Models.DTO.SanPhamDTO

@{
    ViewData["Title"] = "Cập nhật sản phẩm";
    var thuongHieuList = ViewBag.ThuongHieuList as List<SelectListItem>;
    var thanhPhanList = ViewBag.ThanhPhanList as List<SelectListItem>;
    var chatLieuList = ViewBag.ChatLieuList as List<SelectListItem>;
}

<h2 class="mb-4">Cập nhật sản phẩm</h2>

<form asp-action="Edit" asp-route-id="@Model.SanPhamId" method="post">
    @Html.AntiForgeryToken()

    <div class="mb-3">
        <label asp-for="TenSanPham" class="form-label"></label>
        <input asp-for="TenSanPham" class="form-control" />
        <span asp-validation-for="TenSanPham" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="LoaiSanPham" class="form-label">Loại sản phẩm</label>
        <select asp-for="LoaiSanPham" class="form-select" id="loaiSanPhamSelect">
            <option value="">-- Chọn loại sản phẩm --</option>
            <option value="DoAn" selected="@(Model.LoaiSanPham == "DoAn")">Đồ Ăn</option>
            <option value="DoDung" selected="@(Model.LoaiSanPham == "DoDung")">Đồ Dùng</option>
        </select>
        <span asp-validation-for="LoaiSanPham" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ThuongHieuId" class="form-label">Thương hiệu</label>
        <select asp-for="ThuongHieuId" class="form-select">
            <option value="">-- Chọn thương hiệu --</option>
            @foreach (var item in thuongHieuList)
            {
                <option value="@item.Value" selected="@(item.Value == Model.ThuongHieuId.ToString())">@item.Text</option>
            }
        </select>
        <span asp-validation-for="ThuongHieuId" class="text-danger"></span>
    </div>

    <div class="mb-3" id="thanhPhanDiv" style="display:@(Model.LoaiSanPham == "DoAn" ? "block" : "none")">
        <label class="form-label">Thành phần</label>
        <select asp-for="ThanhPhanIds" class="form-select" multiple>
            @foreach (var item in thanhPhanList)
            {
                <option value="@item.Value" selected="@(Model.ThanhPhanIds?.Contains(Guid.Parse(item.Value)) ?? false)">@item.Text</option>
            }
        </select>
    </div>

    <div class="mb-3" id="chatLieuDiv" style="display:@(Model.LoaiSanPham == "DoDung" ? "block" : "none")">
        <label class="form-label">Chất liệu</label>
        <select asp-for="ChatLieuIds" class="form-select" multiple>
            @foreach (var item in chatLieuList)
            {
                <option value="@item.Value" selected="@(Model.ChatLieuIds?.Contains(Guid.Parse(item.Value)) ?? false)">@item.Text</option>
            }
        </select>
    </div>

    <div class="form-check mb-3">
        <input asp-for="TrangThai" class="form-check-input" />
        <label asp-for="TrangThai" class="form-check-label">Đang hoạt động</label>
    </div>

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.getElementById("loaiSanPhamSelect").addEventListener("change", function () {
            const value = this.value;
            document.getElementById("thanhPhanDiv").style.display = value === "DoAn" ? "block" : "none";
            document.getElementById("chatLieuDiv").style.display = value === "DoDung" ? "block" : "none";
        });
    </script>
}
