@model IEnumerable<FurryFriends.API.Models.DTO.SanPhamDTO>
@{
    ViewData["Title"] = "Quản lý sản phẩm";
    var currentLoai = Context.Request.Query["loai"].ToString();
    var currentSearch = Context.Request.Query["search"].ToString();
    int currentPage = ViewBag.Page ?? 1;
    int totalPages = ViewBag.TotalPages ?? 1;
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />

<div class="container-fluid mt-4">
    <div class="card shadow-sm rounded-3">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h1>@ViewData["Title"]</h1>
            <a asp-area="Admin" asp-controller="SanPham" asp-action="Create" class="btn btn-light btn-sm">
                <i class="bi bi-plus-circle-fill text-success me-1"></i>Thêm mới
            </a>

        </div>

        <div class="card-body p-4">
            <form method="get" class="row gy-3 gx-2 mb-4">
                <div class="col-md-4">
                    <input type="text" name="search" class="form-control" placeholder="🔍 Tìm tên sản phẩm..." value="@currentSearch" />
                </div>
                <div class="col-md-3">
                    <select name="loai" class="form-select">
                        <option value="">-- Loại sản phẩm --</option>
                        <option value="DoAn" selected="@(currentLoai == "DoAn")">Đồ ăn</option>
                        <option value="DoDung" selected="@(currentLoai == "DoDung")">Đồ dùng</option>
                    </select>
                </div>
                <div class="col-md-2 d-grid">
                    <button class="btn btn-outline-primary" type="submit">
                        <i class="bi bi-funnel-fill me-1"></i>Lọc
                    </button>
                </div>
                <div class="col-md-2 d-grid">
                    <a href="/Admin/SanPham" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-counterclockwise me-1"></i>Reset
                    </a>
                </div>
            </form>

            <div class="table-responsive">
                <table class="table table-hover align-middle text-center">
                    <thead class="table-light">
                        <tr>
                            <th>Mã SP</th>
                            <th>Tên sản phẩm</th>
                            <th>Loại</th>
                            <th>Chất liệu</th>
                            <th>Thành phần</th>
                            <th>Thương hiệu</th>
                            <th>Ngày tạo</th>
                            <th>Ngày sửa</th>
                            <th>Trạng thái</th>
                            <th>Hành động</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.SanPhamId</td>
                                    <td class="fw-semibold">@item.TenSanPham</td>
                                    <td>@item.LoaiSanPham</td>
                                    <td>@string.Join(", ", item.TenChatLieus ?? new())</td>
                                    <td>@string.Join(", ", item.TenThanhPhans ?? new())</td>
                                    <td>@item.TenThuongHieu</td>
                                    <td>@item.NgayTao.ToString("dd/MM/yyyy")</td>
                                    <td>@item.NgaySua?.ToString("dd/MM/yyyy")</td>
                                    <td>
                                        <span class="badge @(item.TrangThai ? "bg-success" : "bg-secondary")">
                                            @(item.TrangThai ? "Hiện" : "Ẩn")
                                        </span>
                                    </td>
                                    <td>
                                        <a href="/Admin/SanPham/Edit/@item.SanPhamId" class="btn btn-sm btn-warning me-1">
                                            <i class="bi bi-pencil-fill"></i>
                                        </a>
                                        <button class="btn btn-sm btn-danger" onclick="openDeleteModal('@item.SanPhamId', '@item.TenSanPham')">
                                            <i class="bi bi-trash-fill"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr><td colspan="10" class="text-muted">Không có sản phẩm nào.</td></tr>
                        }
                    </tbody>
                </table>
            </div>

            <div class="mt-3 d-flex justify-content-end">
                @if (totalPages > 1)
                {
                    <nav>
                        <ul class="pagination">
                            @for (int i = 1; i <= totalPages; i++)
                            {
                                <li class="page-item @(i == currentPage ? "active" : "")">
                                    <a class="page-link" href="?page=@i&loai=@currentLoai&search=@currentSearch">@i</a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            </div>
        </div>
    </div>
</div>

<!-- Modal xóa -->
<div class="modal fade" id="deleteSanPhamModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content rounded-3 shadow">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">Xác nhận xóa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                Bạn có chắc chắn muốn xóa sản phẩm <strong id="sanPhamTen"></strong>?
            </div>
            <div class="modal-footer">
                <form method="post" id="deleteForm">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="deleteSanPhamId" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                    <button type="submit" class="btn btn-danger">Xóa</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function openDeleteModal(id, tenSanPham) {
            document.getElementById("deleteSanPhamId").value = id;
            document.getElementById("sanPhamTen").textContent = tenSanPham;
            new bootstrap.Modal(document.getElementById("deleteSanPhamModal")).show();
        }
    </script>
}
