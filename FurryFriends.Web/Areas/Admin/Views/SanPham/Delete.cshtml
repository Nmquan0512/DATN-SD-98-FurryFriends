@model FurryFriends.API.Models.DTO.SanPhamDTO

@{
    ViewData["Title"] = "Xóa sản phẩm";
}

<div class="top-bar" style="padding-left: 50px;">
    <h1>@ViewData["Title"]</h1>
    <div class="top-bar-actions">
        <a asp-area="Admin" asp-action="Index" asp-controller="SanPham" class="btn btn-secondary">
            <i class="fas fa-arrow-left"></i>
            Quay lại
        </a>
    </div>
</div>

<nav aria-label="breadcrumb" class="mb-3" style="padding-left: 50px;">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Trang chủ</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="SanPham">Quản lý sản phẩm</a></li>
        <li class="breadcrumb-item active">Xóa</li>
    </ol>
</nav>

<div class="container-fluid" style="padding-left: 50px; padding-right: 50px;">
    <div class="row justify-content-center">
        <div class="col-md-10 col-lg-8">
            <div class="card shadow border-danger">
                <div class="card-header bg-danger text-white">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-exclamation-triangle"></i>
                        Xác nhận xóa
                    </h5>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <i class="fas fa-exclamation-triangle"></i>
                        <strong>Lưu ý:</strong> Hành động này không thể hoàn tác. Bạn có chắc chắn muốn xóa sản phẩm này?
                    </div>
                    <div class="row">
                        <div class="col-md-7">
                            <h6>Thông tin sản phẩm:</h6>
                            <dl class="row">
                                <dt class="col-sm-4">Tên sản phẩm:</dt>
                                <dd class="col-sm-8">@Model.TenSanPham</dd>
                                <dt class="col-sm-4">Loại:</dt>
                                <dd class="col-sm-8">@(Model.LoaiSanPham == "DoAn" ? "Đồ ăn" : "Đồ dùng")</dd>
                                <dt class="col-sm-4">Chất liệu:</dt>
                                <dd class="col-sm-8">@(Model.TenChatLieus != null && Model.TenChatLieus.Any() ? string.Join(", ", Model.TenChatLieus) : "-")</dd>
                                <dt class="col-sm-4">Thành phần:</dt>
                                <dd class="col-sm-8">@(Model.TenThanhPhans != null && Model.TenThanhPhans.Any() ? string.Join(", ", Model.TenThanhPhans) : "-")</dd>
                                <dt class="col-sm-4">Thương hiệu:</dt>
                                <dd class="col-sm-8">@Model.TenThuongHieu</dd>
                                <dt class="col-sm-4">Ngày tạo:</dt>
                                <dd class="col-sm-8">@Model.NgayTao.ToString("dd/MM/yyyy")</dd>
                                <dt class="col-sm-4">Trạng thái:</dt>
                                <dd class="col-sm-8">
                                    @if (Model.TrangThai)
                                    {
                                        <span class="badge bg-success">Hiện</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Ẩn</span>
                                    }
                                </dd>
                            </dl>
                        </div>
                    </div>
                    <form asp-area="Admin" asp-action="Delete" asp-controller="SanPham" method="post">
                        <input type="hidden" asp-for="SanPhamId" />
                        <div class="d-flex justify-content-end gap-2">
                            <a asp-area="Admin" asp-action="Index" asp-controller="SanPham" class="btn btn-secondary">Hủy</a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i>
                                Xác nhận xóa
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div> 