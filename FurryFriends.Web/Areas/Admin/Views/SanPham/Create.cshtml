@model FurryFriends.Web.ViewModels.SanPhamFullCreateViewModel
@{
    ViewData["Title"] = "Tạo sản phẩm mới";
}

<div class="container">
    <h3 class="mt-4">🛒 Tạo sản phẩm mới</h3>
    <hr />

    <form asp-action="Create" method="post" enctype="multipart/form-data" id="productForm">
        <!-- Thông tin cơ bản -->
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5>Thông tin cơ bản</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="SanPham.TenSanPham" class="form-label">Tên sản phẩm *</label>
                        <input asp-for="SanPham.TenSanPham" class="form-control" required />
                        <span asp-validation-for="SanPham.TenSanPham" class="text-danger"></span>
                    </div>

                    <div class="col-md-6 mb-3">
                        <label class="form-label">Thương hiệu *</label>
                        <select asp-for="SanPham.ThuongHieuId" class="form-select"
                                asp-items="@(new SelectList(ViewBag.ThuongHieuList, "ThuongHieuId", "TenThuongHieu"))" required>
                            <option value="">-- Chọn thương hiệu --</option>
                        </select>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label">Loại sản phẩm *</label>
                        <select asp-for="SanPham.LoaiSanPham" class="form-select" id="loaiSanPham" required>
                            <option value="">-- Chọn loại --</option>
                            <option value="DoAn">Đồ ăn</option>
                            <option value="DoDung">Đồ dùng</option>
                        </select>
                    </div>

                    <div class="col-md-6 mb-3">
                        <div id="thanhPhanSection" style="display: none;">
                            <label class="form-label">Thành phần *</label>
                            <select asp-for="SanPham.ThanhPhanIds" class="form-select" multiple id="thanhPhanSelect">
                                @foreach (var tp in ViewBag.ThanhPhanList)
                                {
                                    <option value="@tp.ThanhPhanId">@tp.TenThanhPhan</option>
                                }
                            </select>
                        </div>

                        <div id="chatLieuSection" style="display: none;">
                            <label class="form-label">Chất liệu *</label>
                            <select asp-for="SanPham.ChatLieuIds" class="form-select" multiple id="chatLieuSelect">
                                @foreach (var cl in ViewBag.ChatLieuList)
                                {
                                    <option value="@cl.ChatLieuId">@cl.TenChatLieu</option>
                                }
                            </select>
                        </div>
                    </div>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="SanPham.TrangThai" class="form-check-input" checked />
                    <label asp-for="SanPham.TrangThai" class="form-check-label">Kích hoạt</label>
                </div>
            </div>
        </div>

        <!-- Biến thể sản phẩm -->
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5>Biến thể sản phẩm</h5>
            </div>
            <div class="card-body">
                <div id="variantContainer">
                    @for (int i = 0; i < Model.ChiTietList.Count; i++)
                    {
                        <div class="variant-item border p-3 mb-3">
                            <input type="hidden" asp-for="ChiTietList[@i].SanPhamChiTietId" />

                            <div class="row">
                                <div class="col-md-4 mb-3">
                                    <label class="form-label">Màu sắc *</label>
                                    <select asp-for="ChiTietList[@i].MauSacId" class="form-select" required>
                                        <option value="">-- Chọn màu --</option>
                                        @foreach (var ms in ViewBag.MauSacList)
                                        {
                                            <option value="@ms.MauSacId">@ms.TenMau</option>
                                        }
                                    </select>
                                </div>

                                <div class="col-md-4 mb-3">
                                    <label class="form-label">Kích cỡ *</label>
                                    <select asp-for="ChiTietList[@i].KichCoId" class="form-select" required>
                                        <option value="">-- Chọn kích cỡ --</option>
                                        @foreach (var kc in ViewBag.KichCoList)
                                        {
                                            <option value="@kc.KichCoId">@kc.TenKichCo</option>
                                        }
                                    </select>
                                </div>

                                <div class="col-md-4 mb-3">
                                    <label class="form-label">Số lượng *</label>
                                    <input asp-for="ChiTietList[@i].SoLuongTon" class="form-control" type="number" min="0" required />
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Giá bán *</label>
                                    <input asp-for="ChiTietList[@i].GiaBan" class="form-control" type="number" min="0" required />
                                </div>

                                <div class="col-md-6 mb-3">
                                    <label class="form-label">Mô tả</label>
                                    <textarea asp-for="ChiTietList[@i].MoTa" class="form-control"></textarea>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Ảnh sản phẩm</label>
                                <input asp-for="ChiTietList[@i].Files" type="file" class="form-control" multiple
                                       accept="/image/*" onchange="previewImages(this, 'preview_@i')" />
                                <div id="preview_@i" class="d-flex flex-wrap mt-2 gap-2"></div>
                            </div>

                            <button type="button" class="btn btn-danger btn-sm remove-variant">Xóa biến thể</button>
                        </div>
                    }
                </div>

                <button type="button" class="btn btn-secondary mt-3" id="addVariant">+ Thêm biến thể</button>
            </div>
        </div>

        <div class="d-flex justify-content-end">
            <button type="submit" class="btn btn-primary me-2">Lưu sản phẩm</button>
            <a asp-action="Index" class="btn btn-secondary">Hủy bỏ</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Hiển thị/ẩn thành phần hoặc chất liệu theo loại sản phẩm
        document.getElementById('loaiSanPham').addEventListener('change', function() {
            const loaiSanPham = this.value;
            const thanhPhanSection = document.getElementById('thanhPhanSection');
            const chatLieuSection = document.getElementById('chatLieuSection');

            if (loaiSanPham === 'DoAn') {
                thanhPhanSection.style.display = 'block';
                chatLieuSection.style.display = 'none';
                document.getElementById('chatLieuSelect').selectedIndex = -1;
            } else if (loaiSanPham === 'DoDung') {
                thanhPhanSection.style.display = 'none';
                chatLieuSection.style.display = 'block';
                document.getElementById('thanhPhanSelect').selectedIndex = -1;
            } else {
                thanhPhanSection.style.display = 'none';
                chatLieuSection.style.display = 'none';
            }
        });

        // Thêm biến thể mới
        document.getElementById('addVariant').addEventListener('click', function() {
            const container = document.getElementById('variantContainer');
            const index = container.children.length;

            const html = `
                <div class="variant-item border p-3 mb-3">
                    <input type="hidden" name="ChiTietList[${index}].SanPhamChiTietId" value="" />

                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <label class="form-label">Màu sắc *</label>
                            <select name="ChiTietList[${index}].MauSacId" class="form-select" required>
                                <option value="">-- Chọn màu --</option>
                                @foreach (var ms in ViewBag.MauSacList)
                                {
                                        <option value="@ms.MauSacId">@ms.TenMau</option>
                                }
                            </select>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label class="form-label">Kích cỡ *</label>
                            <select name="ChiTietList[${index}].KichCoId" class="form-select" required>
                                <option value="">-- Chọn kích cỡ --</option>
                                @foreach (var kc in ViewBag.KichCoList)
                                {
                                        <option value="@kc.KichCoId">@kc.TenKichCo</option>
                                }
                            </select>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label class="form-label">Số lượng *</label>
                            <input name="ChiTietList[${index}].SoLuongTon" class="form-control" type="number" min="0" required />
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label">Giá bán *</label>
                            <input name="ChiTietList[${index}].GiaBan" class="form-control" type="number" min="0" required />
                        </div>

                        <div class="col-md-6 mb-3">
                            <label class="form-label">Mô tả</label>
                            <textarea name="ChiTietList[${index}].MoTa" class="form-control"></textarea>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Ảnh sản phẩm</label>
                        <input name="ChiTietList[${index}].Files" type="file" class="form-control" multiple
                               accept="image/*" onchange="previewImages(this, 'preview_new_${index}')" />
                        <div id="preview_new_${index}" class="d-flex flex-wrap mt-2 gap-2"></div>
                    </div>

                    <button type="button" class="btn btn-danger btn-sm remove-variant">Xóa biến thể</button>
                </div>
            `;

            container.insertAdjacentHTML('beforeend', html);
        });

        // Xóa biến thể
        document.addEventListener('click', function(e) {
            if (e.target.classList.contains('remove-variant')) {
                if (document.querySelectorAll('.variant-item').length > 1) {
                    e.target.closest('.variant-item').remove();
                } else {
                    alert('Sản phẩm phải có ít nhất 1 biến thể!');
                }
            }
        });

        // Xem trước ảnh
        function previewImages(input, previewId) {
            const preview = document.getElementById(previewId);
            preview.innerHTML = '';

            if (input.files) {
                Array.from(input.files).forEach(file => {
                    if (!file.type.startsWith('image/')) return;

                    const reader = new FileReader();
                    reader.onload = function(e) {
                        const img = document.createElement('img');
                        img.src = e.target.result;
                        img.style.maxWidth = '100px';
                        img.style.maxHeight = '100px';
                        img.style.objectFit = 'cover';
                        img.style.borderRadius = '4px';
                        img.style.marginRight = '5px';
                        img.style.marginBottom = '5px';
                        preview.appendChild(img);
                    }
                    reader.readAsDataURL(file);
                });
            }
        }

        // Khởi tạo select2 cho các select multiple
        $(document).ready(function() {
            $('#thanhPhanSelect').select2({
                placeholder: "Chọn thành phần",
                allowClear: true
            });

            $('#chatLieuSelect').select2({
                placeholder: "Chọn chất liệu",
                allowClear: true
            });
        });
    </script>
}