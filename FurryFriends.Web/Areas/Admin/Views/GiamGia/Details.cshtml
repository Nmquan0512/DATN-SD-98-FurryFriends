@using FurryFriends.API.Models.DTO
@model FurryFriends.API.Models.DTO.GiamGiaDTO
@{
    ViewData["Title"] = "Chi tiết chương trình giảm giá";
    var sanPhamChiTietList = ViewBag.SanPhamChiTietList as IEnumerable<SanPhamChiTietDTO> ?? new List<SanPhamChiTietDTO>();
}

<div class="container-fluid px-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb bg-white rounded shadow-sm px-3 py-2">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Trang chủ</a></li>
            <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="GiamGia">Quản lý giảm giá</a></li>
            <li class="breadcrumb-item active">Chi tiết</li>
        </ol>
    </nav>

    <!-- Thông tin chương trình -->
    <div class="row mb-4">
        <div class="col-lg-8">
            <div class="card border-0 shadow-sm rounded-4 mb-3">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h3 class="fw-bold text-primary mb-0">
                            <i class="fas fa-tag me-2"></i>@Model.TenGiamGia
                        </h3>
                        <span class="badge @(Model.TrangThai ? "bg-success" : "bg-secondary")">
                            @(Model.TrangThai ? "Đang áp dụng" : "Ngừng áp dụng")
                        </span>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <h6 class="text-muted mb-1">Phần trăm giảm giá</h6>
                                <h4 class="text-info">@Model.PhanTramKhuyenMai%</h4>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <h6 class="text-muted mb-1">Thời gian áp dụng</h6>
                                <div>
                                    <span class="text-primary">@Model.NgayBatDau.ToString("dd/MM/yyyy HH:mm")</span>
                                    <span class="mx-2">→</span>
                                    <span class="text-danger">@Model.NgayKetThuc.ToString("dd/MM/yyyy HH:mm")</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Danh sách sản phẩm -->
    <div class="card border-0 shadow-sm rounded-4 mb-4">
        <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center">
            <h5 class="mb-0 text-primary">
                <i class="fas fa-box-open me-2"></i>Danh sách sản phẩm áp dụng
                <span class="badge bg-primary ms-2">@sanPhamChiTietList.Count()</span>
                SoLuongSanPhamApDung
            </h5>
            <a asp-action="Edit" asp-route-id="@Model.GiamGiaId" class="btn btn-sm btn-outline-primary">
                <i class="fas fa-edit me-1"></i> Chỉnh sửa
            </a>
        </div>

        <div class="card-body">
            @if (sanPhamChiTietList.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th width="80px">Ảnh</th>
                                <th>Tên sản phẩm</th>
                                <th>Màu sắc</th>
                                <th>Kích cỡ</th>
                                <th class="text-end">Giá gốc</th>
                                <th class="text-end">Giá sau giảm</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var sp in sanPhamChiTietList)
                            {
                                var giaSauGiam = sp.Gia * (100 - Model.PhanTramKhuyenMai) / 100;

                                <tr>
                                    <td>
                                        <img src="@(string.IsNullOrEmpty(sp.DuongDan) ? "/images/no-image.png" : sp.DuongDan)"
                                             class="rounded border"
                                             style="width:60px;height:60px;object-fit:cover;"
                                             alt="@sp.TenSanPham">
                                    </td>
                                    <td>@sp.TenSanPham</td>
                                    <td>
                                        <span class="badge" style="background-color: @sp.TenMau; color: white;">
                                            @sp.TenMau
                                        </span>
                                    </td>
                                    <td>@sp.TenKichCo</td>
                                    <td class="text-end text-muted text-decoration-line-through">
                                        @sp.Gia.ToString("N0") ₫
                                    </td>
                                    <td class="text-end fw-bold text-success">
                                        @giaSauGiam.ToString("N0") ₫
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="alert alert-info mb-0">
                    <i class="fas fa-info-circle me-2"></i>Chưa có sản phẩm nào được áp dụng cho chương trình này.
                </div>
            }
        </div>
    </div>

    <div class="d-flex justify-content-between">
        <a asp-action="Index" class="btn btn-secondary">
            <i class="fas fa-arrow-left me-2"></i>Quay lại
        </a>

        <div>
            <a asp-action="Edit" asp-route-id="@Model.GiamGiaId" class="btn btn-primary me-2">
                <i class="fas fa-edit me-2"></i>Chỉnh sửa
            </a>
            <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                <i class="fas fa-trash me-2"></i>Xóa
            </button>
        </div>
    </div>
</div>

<!-- Modal xác nhận xóa -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title"><i class="fas fa-exclamation-triangle me-2"></i>Xác nhận xóa</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa chương trình giảm giá <strong>@Model.TenGiamGia</strong>?</p>
                <p class="text-danger">Hành động này không thể hoàn tác!</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy bỏ</button>
                <form asp-action="Delete" method="post">
                    <input type="hidden" name="id" value="@Model.GiamGiaId" />
                    <button type="submit" class="btn btn-danger">Xác nhận xóa</button>
                </form>
            </div>
        </div>
    </div>
</div>