@model FurryFriends.API.Models.DTO.GiamGiaDTO
@{
    ViewData["Title"] = "Cập nhật chương trình giảm giá";
}
<div class="container-fluid px-4">
    <nav aria-label="breadcrumb" class="mb-3">
        <ol class="breadcrumb bg-white rounded shadow-sm px-3 py-2">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Trang chủ</a></li>
            <li class="breadcrumb-item"><a asp-area="Admin" asp-action="Index" asp-controller="GiamGia">Quản lý giảm giá</a></li>
            <li class="breadcrumb-item active">Cập nhật</li>
        </ol>
    </nav>
    <div class="row justify-content-center">
        <div class="col-lg-7">
            <div class="card border-0 shadow-sm rounded-4">
                <div class="card-header bg-white border-0 pb-0">
                    <h3 class="fw-bold text-primary mb-0"><i class="fas fa-edit me-2"></i>Cập nhật chương trình giảm giá</h3>
                </div>
                <div class="card-body">
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="GiamGiaId" />
    <div class="mb-3">
                            <label asp-for="TenGiamGia" class="form-label fw-semibold"><i class="fas fa-tag me-2 text-primary"></i>Tên chương trình</label>
                            <input asp-for="TenGiamGia" class="form-control form-control-lg" />
                            <span asp-validation-for="TenGiamGia" class="text-danger small"></span>
    </div>
    <div class="mb-3">
                            <label asp-for="PhanTramKhuyenMai" class="form-label fw-semibold"><i class="fas fa-percent me-2 text-primary"></i>Phần trăm khuyến mãi</label>
                            <input asp-for="PhanTramKhuyenMai" class="form-control form-control-lg" type="number" min="0" max="100" step="0.01" />
                            <span asp-validation-for="PhanTramKhuyenMai" class="text-danger small"></span>
    </div>
    <div class="mb-3">
                            <label asp-for="NgayBatDau" class="form-label fw-semibold"><i class="fas fa-calendar-alt me-2 text-primary"></i>Ngày bắt đầu</label>
                            <input asp-for="NgayBatDau" class="form-control form-control-lg" type="date" />
                            <span asp-validation-for="NgayBatDau" class="text-danger small"></span>
    </div>
    <div class="mb-3">
                            <label asp-for="NgayKetThuc" class="form-label fw-semibold"><i class="fas fa-calendar-check me-2 text-primary"></i>Ngày kết thúc</label>
                            <input asp-for="NgayKetThuc" class="form-control form-control-lg" type="date" />
                            <span asp-validation-for="NgayKetThuc" class="text-danger small"></span>
    </div>
    <div class="mb-3">
                            <label asp-for="TrangThai" class="form-label fw-semibold"><i class="fas fa-toggle-on me-2 text-primary"></i>Trạng thái</label>
                            <select asp-for="TrangThai" class="form-select form-select-lg">
            <option value="true">Đang áp dụng</option>
            <option value="false">Ngừng áp dụng</option>
        </select>
                            <span asp-validation-for="TrangThai" class="text-danger small"></span>
                        </div>
                        <div class="d-flex justify-content-end gap-3 mt-4">
                            <button type="submit" class="btn btn-primary btn-lg px-4"><i class="fas fa-save me-2"></i>Lưu thay đổi</button>
                            <a asp-action="Index" class="btn btn-secondary btn-lg px-4"><i class="fas fa-arrow-left me-2"></i>Quay lại</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
