@model FurryFriends.API.Models.DTO.GiamGiaDTO

@{
    ViewData["Title"] = "Cập nhật chương trình giảm giá";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="GiamGiaId" />

    <div class="mb-3">
        <label asp-for="TenGiamGia" class="form-label"></label>
        <input asp-for="TenGiamGia" class="form-control" />
        <span asp-validation-for="TenGiamGia" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PhanTramKhuyenMai" class="form-label"></label>
        <input asp-for="PhanTramKhuyenMai" class="form-control" />
        <span asp-validation-for="PhanTramKhuyenMai" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NgayBatDau" class="form-label"></label>
        <input asp-for="NgayBatDau" class="form-control" type="date" />
        <span asp-validation-for="NgayBatDau" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="NgayKetThuc" class="form-label"></label>
        <input asp-for="NgayKetThuc" class="form-control" type="date" />
        <span asp-validation-for="NgayKetThuc" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="TrangThai" class="form-label"></label>
        <select asp-for="TrangThai" class="form-control">
            <option value="true">Đang áp dụng</option>
            <option value="false">Ngừng áp dụng</option>
        </select>
        <span asp-validation-for="TrangThai" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
