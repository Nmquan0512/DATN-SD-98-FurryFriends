@using FurryFriends.API.Models.DTO
@model FurryFriends.API.Models.DTO.GiamGiaDTO
@{
    ViewData["Title"] = "Chỉnh sửa chương trình giảm giá";
    var sanPhamList = ViewBag.Products as IEnumerable<SanPhamChiTietDTO> ?? new List<SanPhamChiTietDTO>();
}

<div class="container-fluid py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index"><i class="fas fa-home me-1"></i> Trang chủ</a></li>
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="GiamGia" asp-action="Index">Quản lý giảm giá</a></li>
            <li class="breadcrumb-item active" aria-current="page">Chỉnh sửa</li>
        </ol>
    </nav>

    <!-- Tiêu đề -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="mb-0"><i class="fas fa-edit me-2 text-primary"></i>@ViewData["Title"]</h2>
    </div>

    <form asp-action="Edit" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="GiamGiaId" />
        <div asp-validation-summary="ModelOnly" class="alert alert-danger" style="@(ViewData.ModelState.IsValid ? "display:none;" : "")"></div>

        <!-- Phần thông tin chương trình giảm giá -->
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-header bg-light">
                <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Thông tin chung</h5>
            </div>
            <div class="card-body p-4">
                <div class="row g-3">
                    <div class="col-lg-8">
                        <div class="row">
                            <div class="col-md-12 mb-3">
                                <label asp-for="TenGiamGia" class="form-label fw-semibold">Tên chương trình <span class="text-danger">*</span></label>
                                <input asp-for="TenGiamGia" class="form-control" />
                                <span asp-validation-for="TenGiamGia" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="NgayBatDau" class="form-label fw-semibold">Ngày bắt đầu <span class="text-danger">*</span></label>
                                <input asp-for="NgayBatDau" type="datetime-local" class="form-control" value="@Model.NgayBatDau.ToLocalTime().ToString("yyyy-MM-ddTHH:mm")" />
                                <span asp-validation-for="NgayBatDau" class="text-danger small"></span>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label asp-for="NgayKetThuc" class="form-label fw-semibold">Ngày kết thúc <span class="text-danger">*</span></label>
                                <input asp-for="NgayKetThuc" type="datetime-local" class="form-control" value="@Model.NgayKetThuc.ToLocalTime().ToString("yyyy-MM-ddTHH:mm")" />
                                <span asp-validation-for="NgayKetThuc" class="text-danger small"></span>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="mb-3">
                            <label asp-for="PhanTramKhuyenMai" class="form-label fw-semibold">Phần trăm giảm (%) <span class="text-danger">*</span></label>
                            <div class="input-group">
                                <input asp-for="PhanTramKhuyenMai" type="number" class="form-control" min="1" max="100" step="0.1" />
                                <span class="input-group-text">%</span>
                            </div>
                            <span asp-validation-for="PhanTramKhuyenMai" class="text-danger small"></span>
                        </div>
                        <div class="form-check form-switch mt-4">
                            <input class="form-check-input" type="checkbox" role="switch" asp-for="TrangThai" id="trangThaiSwitch">
                            <label class="form-check-label fw-semibold" for="trangThaiSwitch">Kích hoạt</label>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Phần chọn sản phẩm -->
        <div class="card shadow-sm border-0">
            <div class="card-header bg-light d-flex justify-content-between align-items-center">
                <h5 class="mb-0"><i class="fas fa-boxes me-2"></i>Sản phẩm áp dụng</h5>
                <span class="badge bg-primary rounded-pill fs-6">Đã chọn: <span id="selectedCount">@Model.SanPhamChiTietIds.Count</span></span>
            </div>
            <div class="card-body p-4">
                <input type="text" id="productFilter" class="form-control mb-3" placeholder="Tìm kiếm sản phẩm theo tên, màu, kích cỡ..." />

                @if (sanPhamList.Any())
                {
                    <div class="row row-cols-1 row-cols-sm-2 row-cols-lg-3 row-cols-xl-4 g-3" id="productGrid" style="max-height: 60vh; overflow-y: auto; padding: 5px;">
                        @foreach (var product in sanPhamList)
                        {
                            var isSelected = Model.SanPhamChiTietIds.Contains(product.SanPhamChiTietId);

                            <div class="col product-item" data-search="@($"{product.TenSanPham} {product.TenMau} {product.TenKichCo}".ToLower())">
                                <div class="card h-100 card-product @(isSelected ? "border-primary" : "")">
                                    <img src="https://localhost:7289@(product.DuongDan ?? "/images/no-image.png")"
                                         class="card-img-top"
                                         style="height: 150px; object-fit: cover;"
                                         alt="@product.TenSanPham">

                                    <div class="card-body p-3 d-flex flex-column" data-original-price="@product.Gia">
                                        <div class="d-flex justify-content-between">
                                            <h6 class="card-title text-truncate" title="@product.TenSanPham">@product.TenSanPham</h6>
                                            <div class="form-check">
                                                <input type="checkbox" name="selectedProducts" value="@product.SanPhamChiTietId"
                                                       class="form-check-input product-checkbox" @(isSelected ? "checked" : "") />
                                            </div>
                                        </div>
                                        <small class="text-muted d-block">@product.TenMau - @product.TenKichCo</small>

                                        <div class="price-container mt-auto text-center pt-2">
                                            <span class="original-price text-muted text-decoration-line-through me-2 small">
                                                @product.Gia.ToString("N0")₫
                                            </span>
                                            <strong class="discounted-price text-danger fs-5"></strong>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="alert alert-info text-center">Không có sản phẩm nào để gán.</div>
                }
            </div>
        </div>

        <!-- Nút lưu -->
        <div class="d-flex justify-content-between align-items-center mt-4 p-3 bg-light border rounded sticky-bottom">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-times me-2"></i>Hủy bỏ
            </a>
            <button type="submit" class="btn btn-primary btn-lg px-5">
                <i class="fas fa-save me-2"></i>Lưu thay đổi
            </button>
        </div>
    </form>
</div>

@section Styles {
    <style>
        .card-product {
            transition: all 0.2s ease-in-out;
            cursor: pointer;
        }

            .card-product:hover {
                transform: translateY(-5px);
                box-shadow: 0 8px 25px rgba(0,0,0,0.1);
            }

            .card-product.border-primary {
                border-width: 2px !important;
                box-shadow: 0 0 0 3px rgba(13, 110, 253, 0.15);
            }

        .product-checkbox {
            transform: scale(1.2);
            cursor: pointer;
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {

            function updateAllDiscountedPrices() {
                const percentage = parseFloat($('#PhanTramKhuyenMai').val());
                if (isNaN(percentage) || percentage <= 0 || percentage > 100) {
                    $('.price-container').hide();
                    return;
                }
                $('.price-container').show();
                $('.product-item .card').each(function() {
                    const $cardBody = $(this).find('.card-body');
                    const originalPrice = parseFloat($cardBody.data('original-price'));
                    if (!isNaN(originalPrice)) {
                        const discountedPrice = originalPrice * (1 - (percentage / 100));
                        $cardBody.find('.discounted-price').text(
                            Math.round(discountedPrice).toLocaleString('vi-VN') + '₫'
                        );
                    }
                });
            }

            function updateSelectionState() {
                const selectedCount = $('.product-checkbox:checked').length;
                $('#selectedCount').text(selectedCount);
                $('.product-checkbox').each(function() {
                    $(this).closest('.card-product').toggleClass('border-primary', $(this).is(':checked'));
                });
            }

            $('#productFilter').on('input', function() {
                const searchTerm = $(this).val().toLowerCase();
                $('.product-item').each(function() {
                    const searchText = $(this).data('search');
                    $(this).toggle(searchText.includes(searchTerm));
                });
            });

            $('.card-product').on('click', function(e) {
                if (!$(e.target).is('input')) {
                    const $checkbox = $(this).find('.product-checkbox');
                    $checkbox.prop('checked', !$checkbox.prop('checked')).trigger('change');
                }
            });

            $('.product-checkbox').on('change', updateSelectionState);
            $('#PhanTramKhuyenMai').on('input', updateAllDiscountedPrices);

            updateSelectionState();
            updateAllDiscountedPrices();
        });
    </script>
}