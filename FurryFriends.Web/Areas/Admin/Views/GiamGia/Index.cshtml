@model IEnumerable<FurryFriends.API.Models.DTO.GiamGiaDTO>
@{
    ViewData["Title"] = "Danh sách chương trình giảm giá";
}

<h2>@ViewData["Title"]</h2>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">+ Tạo mới chương trình</a>
</div>

<table class="table table-bordered table-striped align-middle">
    <thead class="table-dark">
        <tr>
            <th>Tên</th>
            <th>Phần trăm (%)</th>
            <th>Ngày bắt đầu</th>
            <th>Ngày kết thúc</th>
            <th>Trạng thái</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TenGiamGia</td>
                <td>@item.PhanTramKhuyenMai %</td>
                <td>@item.NgayBatDau?.ToString("dd/MM/yyyy")</td>
                <td>@item.NgayKetThuc?.ToString("dd/MM/yyyy")</td>
                <td>
                    @if (item.TrangThai)
                    {
                        <span class="badge bg-success">Đang áp dụng</span>
                    }
                    else
                    {
                        <span class="badge bg-secondary">Ngừng áp dụng</span>
                    }
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.GiamGiaId" class="btn btn-sm btn-info">Chi tiết</a>
                    <a asp-action="Edit" asp-route-id="@item.GiamGiaId" class="btn btn-sm btn-warning">Sửa</a>
                    <a asp-action="AddSanPham" asp-route-id="@item.GiamGiaId" class="btn btn-sm btn-primary">Gán sản phẩm</a>
                </td>
            </tr>
        }
    </tbody>
</table>
