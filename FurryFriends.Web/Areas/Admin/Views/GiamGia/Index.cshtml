@using FurryFriends.API.Models.DTO
@model IEnumerable<GiamGiaDTO>

@{
    ViewData["Title"] = "Quản lý chương trình giảm giá";
    var now = DateTime.Now;
}

<div class="container-fluid">
    <!-- Thông báo -->
    @if (TempData["success"] != null)
    {
        <div class="alert alert-success">@TempData["success"]</div>
    }
    @if (TempData["error"] != null)
    {
        <div class="alert alert-danger">@TempData["error"]</div>
    }

    <!-- Thống kê -->
    <div class="row mb-4 g-3">
        <div class="col-md-3">
            <div class="card border-primary">
                <div class="card-body">
                    <h6 class="text-muted">Tổng số</h6>
                    <h3 class="fw-bold text-primary">@Model.Count()</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-success">
                <div class="card-body">
                    <h6 class="text-muted">Đang hoạt động</h6>
                    <h3 class="fw-bold text-success">@Model.Count(x => x.TrangThai && x.NgayBatDau <= now && x.NgayKetThuc >= now)</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-warning">
                <div class="card-body">
                    <h6 class="text-muted">Sắp diễn ra</h6>
                    <h3 class="fw-bold text-warning">@Model.Count(x => x.NgayBatDau > now)</h3>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-secondary">
                <div class="card-body">
                    <h6 class="text-muted">Đã kết thúc</h6>
                    <h3 class="fw-bold text-secondary">@Model.Count(x => x.NgayKetThuc < now)</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Tiêu đề và nút thêm mới -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>@ViewData["Title"]</h2>
        <a asp-area="Admin" asp-controller="GiamGia" asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus"></i> Thêm mới
        </a>
    </div>

    <!-- Bảng danh sách -->
    <div class="card shadow">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover" id="dataTable">
                    <thead class="table-light">
                        <tr>
                            <th>STT</th>
                            <th>Tên chương trình</th>
                            <th>Giảm giá</th>
                            <th>Thời gian</th>
                            <th>Sản phẩm</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var (item, index) in Model.Select((item, index) => (item, index + 1)))
                        {
                            <tr>
                                <td>@index</td>
                                <td>@item.TenGiamGia</td>
                                <td>@item.PhanTramKhuyenMai%</td>
                                <td>
                                    @item.NgayBatDau.ToString("dd/MM/yyyy") - @item.NgayKetThuc.ToString("dd/MM/yyyy")
                                    @if (item.NgayBatDau > now)
                                    {
                                        <span class="badge bg-info ms-2">Sắp diễn ra</span>
                                    }
                                    else if (item.NgayKetThuc < now)
                                    {
                                        <span class="badge bg-secondary ms-2">Đã kết thúc</span>
                                    }
                                </td>
                                <td>
                                    @item.SoLuongSanPhamApDung
                                    @if (item.SoLuongSanPhamApDung > 0)
                                    {
                                        <a asp-action="Details" asp-route-id="@item.GiamGiaId" class="text-primary ms-1">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                    }
                                </td>
                                <td>
                                    @if (!item.TrangThai)
                                    {
                                        <span class="badge bg-secondary">Đã tắt</span>
                                    }
                                    else if (item.NgayBatDau <= now && item.NgayKetThuc >= now)
                                    {
                                        <span class="badge bg-success">Đang chạy</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Không hoạt động</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group btn-group-sm">
                                        <a asp-action="Edit" asp-route-id="@item.GiamGiaId" class="btn btn-outline-primary" title="Sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.GiamGiaId" class="btn btn-outline-info" title="Chi tiết">
                                            <i class="fas fa-info-circle"></i>
                                        </a>
                                        <button class="btn btn-outline-danger" title="Xóa"
                                                data-bs-toggle="modal" data-bs-target="#deleteModal-@item.GiamGiaId">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </div>

                                    <!-- Modal xóa -->
                                    <div class="modal fade" id="deleteModal-@item.GiamGiaId" tabindex="-1">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header bg-danger text-white">
                                                    <h5 class="modal-title">Xác nhận xóa</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <p>Bạn có chắc muốn xóa chương trình <strong>@item.TenGiamGia</strong>?</p>
                                                    <p class="text-danger">Tất cả sản phẩm áp dụng sẽ bị xóa theo!</p>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                                                    <form asp-action="Delete" method="post">
                                                        <input type="hidden" name="id" value="@item.GiamGiaId" />
                                                        <button type="submit" class="btn btn-danger">Xác nhận xóa</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" />
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function() {
            $('#dataTable').DataTable({
                language: {
                    url: 'https://cdn.datatables.net/plug-ins/1.11.5/i18n/vi.json'
                },
                columnDefs: [
                    { orderable: false, targets: [0, 6] }
                ],
                order: [[3, 'asc']]
            });
        });
    </script>
}