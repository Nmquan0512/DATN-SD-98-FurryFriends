@model FurryFriends.API.Models.ChucVu

@{
    ViewData["Title"] = "Chỉnh sửa chức vụ";
}

<div class="top-bar" style="padding-left: 50px;">
    <h1>@ViewData["Title"]</h1>
</div>
<nav aria-label="breadcrumb" class="mb-3" style="padding-left: 50px;">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Quản lý chức vụ</a></li>
        <li class="breadcrumb-item active">Chỉnh sửa</li>
    </ol>
</nav>
<div class="form-container" style="margin-left: 10px; margin-right: 40px;">
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-edit me-2"></i>Sửa chức vụ
        </div>
        <div class="card-body">
            @if (TempData["error"] != null)
            {
                <div class="alert alert-danger">@TempData["error"]</div>
            }
            <form asp-action="Edit" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>
                <input type="hidden" asp-for="ChucVuId" />
                <input type="hidden" asp-for="NgayTao" />

                <div class="mb-3">
                    <label asp-for="TenChucVu" class="form-label"></label>
                    <input asp-for="TenChucVu" class="form-control" />
                    <span asp-validation-for="TenChucVu" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label asp-for="MoTaChucVu" class="form-label"></label>
                    <textarea asp-for="MoTaChucVu" class="form-control"></textarea>
                    <span asp-validation-for="MoTaChucVu" class="text-danger"></span>
                </div>
                <div class="form-check mb-3">
                    <input asp-for="TrangThai" type="checkbox" class="form-check-input" />
                    <label asp-for="TrangThai" class="form-check-label"></label>
                </div>
                <button type="submit" class="btn btn-primary"><i class="fas fa-save"></i> Lưu</button>
                <a asp-action="Index" class="btn btn-secondary ms-2"><i class="fas fa-arrow-left"></i> Hủy</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/jquery.dataTables.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
