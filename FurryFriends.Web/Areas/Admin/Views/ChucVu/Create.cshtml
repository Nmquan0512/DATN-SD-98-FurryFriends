@model FurryFriends.API.Models.ChucVu

@{
    ViewData["Title"] = "Thêm chức vụ mới";
}

<div class="top-bar" style="padding-left: 50px;">
    <h1>@ViewData["Title"]</h1>
</div>
<nav aria-label="breadcrumb" class="mb-3" style="padding-left: 50px;">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Quản lý chức vụ</a></li>
        <li class="breadcrumb-item active">Thêm mới</li>
    </ol>
</nav>

<div class="form-container" style="margin-left: 10px; margin-right: 40px;">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white border-0 py-3">
            <div class="d-flex align-items-center">
                <div class="card-icon primary me-3">
                    <i class="fas fa-plus"></i>
                </div>
                <div>
                    <h5 class="card-title mb-0">Thông tin chức vụ</h5>
                    <small class="text-muted">Nhập thông tin để tạo chức vụ mới</small>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            @if (TempData["error"] != null)
            {
                <div class="alert alert-danger" role="alert">
                    <i class="fas fa-exclamation-triangle me-2"></i>@TempData["error"]
                </div>
            }
            
            <form asp-action="Create" method="post" id="createForm">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert" style="display: none;"></div>
                
                <div class="row g-4">
                    <!-- Tên chức vụ -->
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="TenChucVu" class="form-label fw-semibold">
                                <i class="fas fa-id-badge me-2 text-primary"></i>Tên chức vụ
                            </label>
                            <input asp-for="TenChucVu" class="form-control form-control-lg" placeholder="Nhập tên chức vụ" />
                            <span asp-validation-for="TenChucVu" class="text-danger small"></span>
                        </div>
                    </div>

                    <!-- Trạng thái -->
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="form-label fw-semibold">
                                <i class="fas fa-toggle-on me-2 text-primary"></i>Trạng thái
                            </label>
                            <div class="d-flex gap-4 mt-2">
                                <div class="form-check form-check-lg">
                                    <input class="form-check-input" type="checkbox" asp-for="TrangThai" id="TrangThai" checked />
                                    <label class="form-check-label fw-medium" for="TrangThai">
                                        <i class="fas fa-check-circle text-success me-2"></i>Hoạt động
                                    </label>
                                </div>
                            </div>
                            <span asp-validation-for="TrangThai" class="text-danger small"></span>
                        </div>
                    </div>

                    <!-- Mô tả chức vụ -->
                    <div class="col-12">
                        <div class="form-group">
                            <label asp-for="MoTaChucVu" class="form-label fw-semibold">
                                <i class="fas fa-align-left me-2 text-primary"></i>Mô tả chức vụ
                            </label>
                            <textarea asp-for="MoTaChucVu" class="form-control form-control-lg" rows="4" placeholder="Nhập mô tả chi tiết về chức vụ"></textarea>
                            <span asp-validation-for="MoTaChucVu" class="text-danger small"></span>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="d-flex justify-content-end gap-3 mt-5 pt-4 border-top">
                    <a asp-action="Index" class="btn btn-light btn-lg px-4">
                        <i class="fas fa-arrow-left me-2"></i>Quay lại
                    </a>
                    <button type="submit" class="btn btn-primary btn-lg px-4">
                        <i class="fas fa-save me-2"></i>Lưu
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script>
        $(document).ready(function () {
            // Form validation
            $('#createForm').on('submit', function(e) {
                if ($(this).valid()) {
                    // Form hợp lệ, cho phép submit
                    return true;
                }
            });
        });
    </script>
}
