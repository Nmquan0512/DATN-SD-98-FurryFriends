@model FurryFriends.API.Models.KhachHang
@{
    ViewData["Title"] = "Chi tiết khách hàng";
}
<div class="top-bar" style="padding-left: 50px;">
    <h1>@ViewData["Title"]</h1>
</div>
<nav aria-label="breadcrumb" class="mb-3" style="padding-left: 50px;">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Quản lý khách hàng</a></li>
        <li class="breadcrumb-item active">Chi tiết</li>
    </ol>
</nav>
<div class="form-container" style="margin-left: 10px; margin-right: 40px;">
    <div class="card shadow-sm border-0">
        <div class="card-header bg-white border-0 py-3">
            <div class="d-flex align-items-center">
                <div class="card-icon primary me-3">
                    <i class="fas fa-info-circle"></i>
                </div>
                <div>
                    <h5 class="card-title mb-0">Chi tiết khách hàng</h5>
                    <small class="text-muted">Thông tin chi tiết khách hàng</small>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <dl class="row">
                <dt class="col-sm-3">Tên khách hàng</dt>
                <dd class="col-sm-9">@Model.TenKhachHang</dd>
                <dt class="col-sm-3">Số điện thoại</dt>
                <dd class="col-sm-9">@Model.SDT</dd>
                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.EmailCuaKhachHang</dd>
                <dt class="col-sm-3">Điểm tích lũy</dt>
                <dd class="col-sm-9">@Model.DiemKhachHang</dd>
                <dt class="col-sm-3">Ngày tham gia</dt>
                <dd class="col-sm-9">@Model.NgayTaoTaiKhoan.ToString("dd/MM/yyyy")</dd>
                <dt class="col-sm-3">Trạng thái</dt>
                <dd class="col-sm-9">
                    @switch (Model.TrangThai)
                    {
                        case 0:
                            <span class="badge bg-secondary">Chưa kích hoạt</span>
                            break;
                        case 1:
                            <span class="badge bg-success">Đang hoạt động</span>
                            break;
                        case 2:
                            <span class="badge bg-danger">Đã khóa</span>
                            break;
                        default:
                            <span class="badge bg-secondary">Không xác định</span>
                            break;
                    }
                </dd>
            </dl>
            <div class="d-flex justify-content-end gap-3 mt-5 pt-4 border-top">
                <a asp-action="Index" class="btn btn-light btn-lg px-4">
                    <i class="fas fa-arrow-left me-2"></i>Quay lại
                </a>
                <a asp-action="Edit" asp-route-id="@Model.KhachHangId" class="btn btn-primary btn-lg px-4">
                    <i class="fas fa-edit me-2"></i>Chỉnh sửa
                </a>
            </div>
        </div>
    </div>
</div> 