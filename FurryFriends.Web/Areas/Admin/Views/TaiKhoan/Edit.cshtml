@model FurryFriends.API.Models.TaiKhoan

@{
    ViewData["Title"] = "Chỉnh sửa tài khoản";
}

<div class="top-bar" style="padding-left: 50px;">
    <h1>@ViewData["Title"]</h1>
</div>
<nav aria-label="breadcrumb" class="mb-3" style="padding-left: 50px;">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Quản lý tài khoản</a></li>
        <li class="breadcrumb-item active">Chỉnh sửa</li>
    </ol>
</nav>
<div class="form-container" style="margin-left: 10px; margin-right: 40px;">
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-user-edit me-2"></i>Chỉnh sửa tài khoản
        </div>
        <div class="card-body">
            @if (TempData["error"] != null)
            {
                <div class="alert alert-danger">@TempData["error"]</div>
            }
            @if (TempData["success"] != null)
            {
                <div class="alert alert-success">@TempData["success"]</div>
            }

            <form asp-action="Edit" method="post">
                <!-- Hiển thị lỗi tổng thể -->
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <!-- Trường ẩn -->
                <input type="hidden" asp-for="Password" />
                <input type="hidden" asp-for="TaiKhoanId" />
                <input type="hidden" asp-for="NgayTaoTaiKhoan" />

                <!-- Tên đăng nhập -->
                <div class="mb-3">
                    <label asp-for="UserName" class="form-label">Tên đăng nhập</label>
                    <input asp-for="UserName" class="form-control" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <!-- Mật khẩu (nếu bạn cho phép sửa mật khẩu) -->
                @* <div class="mb-3"> *@
                @*     <label asp-for="Password" class="form-label">Mật khẩu</label> *@
                @*     <input asp-for="Password" type="password" class="form-control" /> *@
                @*     <span asp-validation-for="Password" class="text-danger"></span> *@
                @* </div> *@

                <!-- Email (nếu có) -->
                @* <div class="mb-3"> *@
                @*     <label asp-for="Email" class="form-label">Email</label> *@
                @*     <input asp-for="Email" type="email" class="form-control" /> *@
                @*     <span asp-validation-for="Email" class="text-danger"></span> *@
                @* </div> *@

                <!-- Vai trò (nếu bạn dùng hệ thống phân quyền) -->
                @* <div class="mb-3"> *@
                @*     <label asp-for="RoleId" class="form-label">Quyền</label> *@
                @*     <select asp-for="RoleId" class="form-select" asp-items="ViewBag.RoleId"></select> *@
                @*     <span asp-validation-for="RoleId" class="text-danger"></span> *@
                @* </div> *@

                <!-- Trạng thái -->
                <div class="form-check mb-3">
                    <input asp-for="TrangThai" type="checkbox" class="form-check-input" />
                    <label asp-for="TrangThai" class="form-check-label">Đang hoạt động</label>
                    <span asp-validation-for="TrangThai" class="text-danger"></span>
                </div>

                <!-- Nút -->
                <button type="submit" class="btn btn-primary">Lưu</button>
                <a asp-action="Index" class="btn btn-secondary">Hủy</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.7/css/jquery.dataTables.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
