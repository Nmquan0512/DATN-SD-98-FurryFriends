@model IEnumerable<FurryFriends.API.Models.DTO.ThuongHieuDTO>

@{
    ViewData["Title"] = "Quản lý thương hiệu";
}

<div class="top-bar" style="padding-left: 50px;">
    <h1>@ViewData["Title"]</h1>
    <div class="top-bar-actions">
        <a asp-area="Admin" asp-action="Create" asp-controller="ThuongHieu" class="btn btn-primary">
            <i class="fas fa-plus"></i>
            Thêm mới
        </a>
    </div>
</div>

<nav aria-label="breadcrumb" class="mb-3" style="padding-left: 50px;">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Dashboard" asp-action="Index">Trang chủ</a></li>
        <li class="breadcrumb-item active">Quản lý thương hiệu</li>
    </ol>
</nav>

<div class="container-fluid" style="padding-left: 50px; padding-right: 50px;">
    <div class="card shadow">
        <div class="card-header">
            <h5 class="card-title mb-0">Danh sách thương hiệu</h5>
        </div>
        <div class="card-body">
            <div class="table-container table-responsive" id="thuongHieuTableContainer" style="margin-left: 10px; margin-right: 40px;">
                <table id="thuongHieuTable" class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>Tên thương hiệu</th>
                            <th>Mô tả</th>
                            <th>Trạng thái</th>
                            <th>Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int stt = 1;
                        }
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@stt</td>
                                <td>@item.TenThuongHieu</td>
                                <td>@(string.IsNullOrEmpty(item.MoTa) ? "Không có mô tả" : item.MoTa)</td>
                                <td>
                                    @if (item.TrangThai)
                                    {
                                        <span class="badge bg-success">Hiện</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Ẩn</span>
                                    }
                                </td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a asp-area="Admin" asp-action="Edit" asp-controller="ThuongHieu" asp-route-id="@item.ThuongHieuId" class="btn btn-sm btn-outline-primary" title="Chỉnh sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-area="Admin" asp-action="Delete" asp-controller="ThuongHieu" asp-route-id="@item.ThuongHieuId" class="btn btn-sm btn-outline-danger" title="Xóa">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                            stt++;
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.3/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/2.3.2/js/dataTables.js"></script>
    <script src="https://cdn.datatables.net/2.3.2/js/dataTables.bootstrap5.js"></script>
    <script>
        $(document).ready(function () {
            if (window.adminLoading) {
                window.adminLoading.showTableLoading('#thuongHieuTableContainer');
            }
            $('#thuongHieuTable').DataTable({
                language: { url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/vi.json' },
                responsive: true,
                pageLength: 10,
                lengthMenu: [[10, 25, 50, -1], [10, 25, 50, "Tất cả"]],
                order: [[1, 'asc']],
                columnDefs: [ { orderable: false, targets: [0, 4] } ],
                initComplete: function () {
                    if (window.adminLoading) {
                        window.adminLoading.hideTableLoading('#thuongHieuTableContainer');
                    }
                }
            });
            $('.action-btn').on('click', function (e) {
                if (window.adminLoading) {
                    window.adminLoading.showLoadingWithMessage('Đang xử lý...');
                }
            });
        });
    </script>
    <link rel="stylesheet" href="https://cdn.datatables.net/2.3.2/css/dataTables.bootstrap5.min.css" />
}
