@model IEnumerable<FurryFriends.Web.Models.ThongBaoViewModel>
@{
    ViewData["Title"] = "Quản lý thông báo";
}
<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Quản lý thông báo</h2>
    <a href="@Url.Action("Create")" class="btn btn-primary"><i class="bi bi-plus-circle"></i> Thêm mới</a>
</div>
<table class="table table-bordered table-hover bg-white rounded shadow-sm">
    <thead class="table-light">
        <tr>
            <th>Tiêu đề</th>
            <th>Nội dung</th>
            <th>Ngày tạo</th>
            <th>Đã đọc</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.TieuDe</td>
                <td>@item.NoiDung</td>
                <td>@item.NgayTao.ToString("dd/MM/yyyy HH:mm")</td>
                <td>
                    @if (item.DaDoc)
                    {
                        <span class="badge bg-success">Đã đọc</span>
                    }
                    else
                    {
                        <span class="badge bg-warning text-dark">Chưa đọc</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table> 