@model FurryFriends.API.Models.GiamGia

@{
    ViewData["Title"] = "Chỉnh sửa giảm giá";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="top-bar" style="padding-left: 50px;">
    <h1>@ViewData["Title"]</h1>
</div>
<nav aria-label="breadcrumb" class="mb-3" style="padding-left: 50px;">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Quản lý giảm giá</a></li>
        <li class="breadcrumb-item active">Chỉnh sửa</li>
    </ol>
</nav>
<div class="form-container" style="margin-left: 10px; margin-right: 40px;">
    <div class="card shadow mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <i class="fas fa-edit me-2"></i>
            <span class="fw-bold">Chỉnh sửa giảm giá</span>
        </div>
        <div class="card-body">
            @if (TempData["error"] != null)
            {
                <div class="alert alert-danger">@TempData["error"]</div>
            }

            <form asp-action="Edit" method="post" novalidate>
                <input type="hidden" asp-for="GiamGiaId" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Tên Giảm Giá -->
                <div class="mb-3">
                    <label asp-for="TenGiamGia" class="form-label fw-semibold"></label>
                    <input asp-for="TenGiamGia" class="form-control" />
                    <span asp-validation-for="TenGiamGia" class="text-danger small"></span>
                </div>

                <!-- Phần Trăm Khuyến Mãi -->
                <div class="mb-3">
                    <label asp-for="PhanTramKhuyenMai" class="form-label fw-semibold"></label>
                    <div class="input-group">
                        <input asp-for="PhanTramKhuyenMai" class="form-control" />
                        <span class="input-group-text">%</span>
                    </div>
                    <span asp-validation-for="PhanTramKhuyenMai" class="text-danger small"></span>
                </div>

                <!-- Ngày Bắt Đầu -->
                <div class="mb-3">
                    <label asp-for="NgayBatDau" class="form-label fw-semibold"></label>
                    <input asp-for="NgayBatDau" type="date" class="form-control" />
                    <span asp-validation-for="NgayBatDau" class="text-danger small"></span>
                </div>

                <!-- Ngày Kết Thúc -->
                <div class="mb-3">
                    <label asp-for="NgayKetThuc" class="form-label fw-semibold"></label>
                    <input asp-for="NgayKetThuc" type="date" class="form-control" />
                    <span asp-validation-for="NgayKetThuc" class="text-danger small"></span>
                </div>

                <!-- Trạng Thái -->
                <div class="mb-3">
                    <label class="form-label fw-semibold d-block">Trạng thái</label>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="TrangThai" value="true" id="EditTrangThaiTrue" />
                        <label class="form-check-label" for="EditTrangThaiTrue">Hoạt động</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" asp-for="TrangThai" value="false" id="EditTrangThaiFalse" />
                        <label class="form-check-label" for="EditTrangThaiFalse">Không hoạt động</label>
                    </div>
                    <span asp-validation-for="TrangThai" class="text-danger small d-block"></span>
                </div>

                <div class="d-flex justify-content-end gap-2 mt-4">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-1"></i> Lưu thay đổi
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-1"></i> Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
