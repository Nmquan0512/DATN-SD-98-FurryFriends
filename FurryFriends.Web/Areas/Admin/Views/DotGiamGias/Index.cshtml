@model IEnumerable<FurryFriends.API.Models.DotGiamGiaSanPham>

@{
    ViewData["Title"] = "Quản lý đợt giảm giá";
}

<div class="top-bar" style="padding-left: 50px;">
    <h1>@ViewData["Title"]</h1>
    <div class="top-bar-actions">
        <a asp-action="Create"  class="btn btn-primary">
            <i class="fas fa-plus"></i>
            Thêm mới
        </a>
    </div>
</div>
<nav aria-label="breadcrumb" class="mb-3" style="padding-left: 50px;">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
        <li class="breadcrumb-item active">Quản lý đợt giảm giá</li>
    </ol>
</nav>
<div class="table-container table-responsive" id="dotGiamGiaTableContainer" style="margin-left: 10px; margin-right: 40px;">
    <table id="dotGiamGiaTable" class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Tên giảm giá</th>
                <th>Tên sản phẩm</th>
                <th>Phần trăm giảm</th>
                <th>Trạng thái</th>
                <th>Ngày tạo</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.GiamGia?.TenGiamGia</td>
                    <td>@item.SanPham?.TenSanPham</td>
                    <td>@item.PhanTramGiamGia %</td>
                    <td>
                        @if (item.TrangThai)
                        {
                            <span class="badge bg-success">Áp dụng</span>
                        }
                        else
                        {
                            <span class="badge bg-secondary">Ngưng</span>
                        }
                    </td>
                    <td>@item.NgayTao.ToString("dd/MM/yyyy")</td>
                    <td>
                        <div class="d-flex gap-2">
                            <a asp-action="Edit" asp-route-id="@item.DotGiamGiaSanPhamId" class="btn btn-warning btn-sm">
                                <i class="fas fa-edit"></i>
                            </a>
                            <button type="button" class="btn btn-danger btn-sm" onclick="confirmDelete('@item.DotGiamGiaSanPhamId', '@item.GiamGia?.TenGiamGia', '@item.SanPham?.TenSanPham')">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<!-- Modal xác nhận xóa giữ nguyên -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="deleteForm" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Xác nhận xóa</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
                </div>
                <div class="modal-body">
                    <p>Bạn có chắc muốn xóa đợt giảm giá <strong id="deleteDiscountName"></strong> cho sản phẩm <strong id="deleteProductName"></strong> không?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Không</button>
                    <button type="submit" class="btn btn-danger">Có</button>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://code.jquery.com/jquery-3.7.1.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.3/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/2.3.2/js/dataTables.js"></script>
    <script src="https://cdn.datatables.net/2.3.2/js/dataTables.bootstrap5.js"></script>
    <script>
        $(document).ready(function () {
            $('#dotGiamGiaTable').DataTable({
                language: { url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/vi.json' },
                responsive: true,
                order: [[4, 'desc']]
            });
        });
        function confirmDelete(id, discountName, productName) {
            const form = document.getElementById('deleteForm');
            form.action = '/Admin/DotGiamGias/Delete/' + id;
            document.getElementById('deleteDiscountName').innerText = discountName || '';
            document.getElementById('deleteProductName').innerText = productName || '';
            var deleteModal = new bootstrap.Modal(document.getElementById('deleteConfirmModal'));
            deleteModal.show();
        }
    </script>
    <link rel="stylesheet" href="https://cdn.datatables.net/2.3.2/css/dataTables.bootstrap5.min.css" />
}
