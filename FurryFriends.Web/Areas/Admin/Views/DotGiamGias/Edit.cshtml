@model FurryFriends.API.Models.DotGiamGiaSanPham

@{
    ViewData["Title"] = "Chỉnh sửa đợt giảm giá";
}

<div class="top-bar" style="padding-left: 50px;">
    <h1>@ViewData["Title"]</h1>
</div>
<nav aria-label="breadcrumb" class="mb-3" style="padding-left: 50px;">
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Trang chủ</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Quản lý đợt giảm giá</a></li>
        <li class="breadcrumb-item active">Chỉnh sửa</li>
    </ol>
</nav>
<div class="form-container" style="margin-left: 10px; margin-right: 40px;">
    <div class="card shadow mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="mb-0"><i class="fas fa-edit me-2"></i>Chỉnh sửa đợt giảm giá</h5>
        </div>
        <div class="card-body">
            @if (TempData["error"] != null)
            {
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    @TempData["error"]
                </div>
            }

            <form asp-action="Edit" method="post">
                <input type="hidden" asp-for="DotGiamGiaSanPhamId" />
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="GiamGiaId" class="form-label">Loại giảm giá</label>
                            <select asp-for="GiamGiaId" asp-items="ViewBag.GiamGiaList" class="form-control" id="GiamGiaId">
                                <option value="">-- Chọn loại giảm giá --</option>
                            </select>
                            <span asp-validation-for="GiamGiaId" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="SanPhamId" class="form-label">Sản phẩm</label>
                            <select asp-for="SanPhamId" asp-items="ViewBag.SanPhamList" class="form-control">
                                <option value="">-- Chọn sản phẩm --</option>
                            </select>
                            <span asp-validation-for="SanPhamId" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="PhanTramGiamGia" class="form-label">Phần trăm giảm giá (%)</label>
                            <div class="input-group">
                                <input asp-for="PhanTramGiamGia" class="form-control" type="number" min="0" max="100" step="0.01" id="PhanTramGiamGia" readonly />
                                <span class="input-group-text">%</span>
                            </div>
                            <span asp-validation-for="PhanTramGiamGia" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label class="form-label">Trạng thái</label>
                            <div class="d-flex gap-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" asp-for="TrangThai" value="true" id="TrangThai_True" />
                                    <label class="form-check-label" for="TrangThai_True">
                                        <i class="fas fa-check-circle text-success me-1"></i>Áp dụng
                                    </label>
                                </div>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" asp-for="TrangThai" value="false" id="TrangThai_False" />
                                    <label class="form-check-label" for="TrangThai_False">
                                        <i class="fas fa-times-circle text-danger me-1"></i>Không áp dụng
                                    </label>
                                </div>
                            </div>
                            <span asp-validation-for="TrangThai" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="action-buttons">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save me-2"></i>Lưu thay đổi
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Quay lại
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#GiamGiaId').change(function () {
                var giamGiaId = $(this).val();
                if (giamGiaId) {
                    $.ajax({
                        url: `/api/giamgia/${giamGiaId}/phantram`,
                        type: 'GET',
                        success: function (data) {
                            $('#PhanTramGiamGia').val(data);
                        },
                        error: function () {
                            $('#PhanTramGiamGia').val('');
                        }
                    });
                } else {
                    $('#PhanTramGiamGia').val('');
                }
            });

            // Trigger change event on load if value exists
            $('#GiamGiaId').trigger('change');
        });
    </script>
}
