@model FurryFriends.API.Models.Voucher

@{
    ViewData["Title"] = "Xóa Voucher";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Xóa Voucher</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Trang chủ</a></li>
        <li class="breadcrumb-item"><a asp-controller="Voucher" asp-action="Index">Quản lý Voucher</a></li>
        <li class="breadcrumb-item active">Xóa Voucher</li>
    </ol>

    <div class="alert alert-warning">
        <strong>Bạn có chắc chắn muốn xóa Voucher này?</strong>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <form asp-action="DeleteConfirmed" method="post">
                <input type="hidden" asp-for="VoucherId" />

                <table class="table table-bordered">
                    <tr>
                        <th>Tên Voucher</th>
                        <td>@Model.TenVoucher</td>
                    </tr>
                    <tr>
                        <th>Phần trăm giảm</th>
                        <td>@Model.PhanTramGiam * 100 %</td>
                    </tr>
                    <tr>
                        <th>Ngày bắt đầu</th>
                        <td>@Model.NgayBatDau.ToString("dd/MM/yyyy")</td>
                    </tr>
                    <tr>
                        <th>Ngày kết thúc</th>
                        <td>@Model.NgayKetThuc.ToString("dd/MM/yyyy")</td>
                    </tr>
                    <tr>
                        <th>Số lượng</th>
                        <td>@Model.SoLuong</td>
                    </tr>
                    <tr>
                        <th>Trạng thái</th>
                        <td>
                            @switch (Model.TrangThai)
                            {
                                case 0:
                                    <span class="badge bg-secondary">Ẩn</span>
                                    break;
                                case 1:
                                    <span class="badge bg-success">Hoạt động</span>
                                    break;
                                case 2:
                                    <span class="badge bg-danger">Hết hạn</span>
                                    break;
                                default:
                                    <span class="badge bg-warning">Không xác định</span>
                                    break;
                            }
                        </td>
                    </tr>
                </table>

                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash-alt"></i> Xác nhận xóa
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
