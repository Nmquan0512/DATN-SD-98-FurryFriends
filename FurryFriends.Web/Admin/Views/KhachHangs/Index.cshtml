@model IEnumerable<FurryFriends.API.Models.KhachHang>

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/css/bootstrap.min.css" />
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.3.1/dist/js/bootstrap.bundle.min.js"></script>


<div class="main-content" id="mainContent">
    <div class="top-bar">
        <h1>Quản lý giảm giá</h1>
        <div class="search-bar">
            <i class="fas fa-search"></i>
            <input type="text" placeholder="Tìm kiếm sản phẩm...">
        </div>
        <div class="user-info">
            <span>Admin</span>
            <div class="avatar">AD</div>
        </div>
    </div>

    <div class="dashboard-card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h4 class="mb-0">Danh sách giảm giá</h4>
            <a asp-area="Admin" asp-controller="KhachHang" asp-action="Create" class="btn btn-success">
                <i class="fas fa-plus"></i> Thêm Khách Hàng Mới
            </a>
        </div>

        <div class="table-container mt-3">
            <table class="table table-bordered mt-3">
                <thead>
                    <tr>
                        <th>Tên</th>
                        <th>Email</th>
                        <th>SĐT</th>
                        <th>Điểm</th>
                        <th>Ngày Tạo</th>
                        <th>Trạng Thái</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.TenKhachHang</td>
                            <td>@item.EmailCuaKhachHang</td>
                            <td>@item.SDT</td>
                            <td>@item.DiemKhachHang</td>
                            <td>@item.NgayTaoTaiKhoan.ToString("dd/MM/yyyy")</td>
                            <td>@(item.TrangThai == 1 ? "Hoạt động" : "Khoá")</td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.KhachHangId">Chi tiết</a> |
                                <a asp-action="Edit" asp-route-id="@item.KhachHangId">Sửa</a> |
                                <a asp-action="Delete" asp-route-id="@item.KhachHangId">Xoá</a>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>

        <div class="d-flex justify-content-center mt-3">
            <nav aria-label="Page navigation">
                <ul class="pagination">
                    <li class="page-item disabled">
                        <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
                    </li>
                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                    <li class="page-item">
                        <a class="page-link" href="#">Next</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>

<!-- Modal xác nhận xoá - Chuẩn Bootstrap 4 -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <form id="deleteForm" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Xác nhận xoá</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Đóng">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Bạn có chắc muốn xoá <strong id="deleteItemName"></strong> không?</p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Không</button>
                    <button type="submit" class="btn btn-danger">Có</button>
                </div>
            </form>
        </div>
    </div>
</div>