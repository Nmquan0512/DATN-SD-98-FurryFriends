<!-- Loading Overlay -->
<div id="loadingOverlay" class="fixed inset-0 bg-black bg-opacity-50 flex justify-center items-center z-50 hidden">
  <div class="loader ease-linear rounded-full border-8 border-t-8 border-gray-200 h-20 w-20"></div>
</div>

<style>
  /* Tailwind + custom spinner */
  .loader {
    border-top-color: #3498db; /* màu xanh dương */
    animation: spin 1s linear infinite;
  }
  @@keyframes spin {
    to { transform: rotate(360deg); }
  }
</style>
