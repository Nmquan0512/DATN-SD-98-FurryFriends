@model FurryFriends.Web.Models.DoiMatKhauViewModel
@{
    ViewData["Title"] = "Đổi Mật Khẩu";
    Layout = null; // Để dùng như partial trong tab
}
<div class="w-full max-w-lg mx-auto bg-white/80 glass shadow-lg rounded-2xl p-8 fade-in-up">
    <h3 class="text-2xl font-bold text-gradient text-center mb-6 flex items-center justify-center gap-2">
        <i class="fas fa-key"></i> Đổi Mật Khẩu
    </h3>
    @if (TempData["Message"] != null)
    {
        <div class="bg-green-100 text-green-800 px-4 py-3 rounded mb-4 flex items-center gap-2 shadow">
            <i class="fas fa-check-circle"></i> @TempData["Message"]
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="bg-red-100 text-red-800 px-4 py-3 rounded mb-4 flex items-center gap-2 shadow">
            <i class="fas fa-exclamation-triangle"></i> @TempData["Error"]
        </div>
    }
    <form asp-action="DoiMatKhau" method="post" class="space-y-5">
        <input type="hidden" asp-for="TaiKhoanId" />
        <div>
            <label asp-for="MatKhauCu" class="font-medium text-gray-700 flex items-center gap-2"><i class="fas fa-lock"></i> Mật khẩu cũ</label>
            <input asp-for="MatKhauCu" type="password" class="w-full px-4 py-2 border rounded focus:ring-2 focus:ring-purple-400" placeholder="Nhập mật khẩu cũ..." />
            <span asp-validation-for="MatKhauCu" class="text-red-500 text-sm"></span>
        </div>
        <div>
            <label asp-for="MatKhauMoi" class="font-medium text-gray-700 flex items-center gap-2"><i class="fas fa-unlock-alt"></i> Mật khẩu mới</label>
            <input asp-for="MatKhauMoi" type="password" class="w-full px-4 py-2 border rounded focus:ring-2 focus:ring-blue-400" placeholder="Nhập mật khẩu mới..." />
            <span asp-validation-for="MatKhauMoi" class="text-red-500 text-sm"></span>
        </div>
        <div>
            <label asp-for="XacNhanMatKhauMoi" class="font-medium text-gray-700 flex items-center gap-2"><i class="fas fa-check-double"></i> Xác nhận mật khẩu mới</label>
            <input asp-for="XacNhanMatKhauMoi" type="password" class="w-full px-4 py-2 border rounded focus:ring-2 focus:ring-pink-400" placeholder="Nhập lại mật khẩu mới..." />
            <span asp-validation-for="XacNhanMatKhauMoi" class="text-red-500 text-sm"></span>
        </div>
        <div class="text-center mt-6">
            <button type="submit" class="bg-gradient-to-r from-pink-500 to-yellow-500 text-white px-8 py-3 rounded-full font-bold shadow-lg hover:from-yellow-500 hover:to-pink-500 transition duration-300 magnetic-btn">
                <i class="fas fa-save mr-2"></i> Cập Nhật Mật Khẩu
            </button>
        </div>
    </form>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
