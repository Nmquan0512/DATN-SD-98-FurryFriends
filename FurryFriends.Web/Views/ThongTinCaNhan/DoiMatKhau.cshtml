@model FurryFriends.Web.Models.DoiMatKhauViewModel
@{
    ViewData["Title"] = "Đổi Mật Khẩu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mx-auto px-4 py-10">
    <h2 class="text-3xl font-semibold text-center text-gradient mb-6">Đổi Mật Khẩu</h2>

    @if (TempData["Message"] != null)
    {
        <div class="bg-green-100 text-green-800 px-4 py-3 rounded mb-4 text-center">
            @TempData["Message"]
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="bg-red-100 text-red-800 px-4 py-3 rounded mb-4 text-center">
            @TempData["Error"]
        </div>
    }

    <form asp-action="DoiMatKhau" method="post" class="max-w-md mx-auto bg-white p-6 rounded-lg shadow-md space-y-4">
        <div>
            <label asp-for="MatKhauCu" class="font-medium text-gray-700">Mật khẩu cũ</label>
            <input asp-for="MatKhauCu" type="password" class="w-full px-4 py-2 border rounded" />
            <span asp-validation-for="MatKhauCu" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="MatKhauMoi" class="font-medium text-gray-700">Mật khẩu mới</label>
            <input asp-for="MatKhauMoi" type="password" class="w-full px-4 py-2 border rounded" />
            <span asp-validation-for="MatKhauMoi" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="XacNhanMatKhauMoi" class="font-medium text-gray-700">Xác nhận mật khẩu mới</label>
            <input asp-for="XacNhanMatKhauMoi" type="password" class="w-full px-4 py-2 border rounded" />
            <span asp-validation-for="XacNhanMatKhauMoi" class="text-red-500 text-sm"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="bg-gradient-to-r from-purple-600 to-blue-600 text-white px-6 py-2 rounded hover:from-blue-600 hover:to-purple-600 transition duration-300">
                Cập Nhật Mật Khẩu
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
