@model FurryFriends.Web.Models.ThongTinCaNhanViewModel
@{
    ViewData["Title"] = "Thông Tin Cá Nhân";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mx-auto px-4 py-8">
    <h2 class="text-3xl font-semibold text-center text-gradient mb-6">Thông Tin Cá Nhân</h2>

    @if (TempData["Message"] != null)
    {
        <div class="bg-green-100 text-green-800 px-4 py-3 rounded mb-4">
            @TempData["Message"]
        </div>
    }

    @if (TempData["Error"] != null)
    {
        <div class="bg-red-100 text-red-800 px-4 py-3 rounded mb-4">
            @TempData["Error"]
        </div>
    }

    <form asp-action="Index" method="post" class="max-w-xl mx-auto bg-white p-6 rounded-lg shadow-md space-y-4">
        <input type="hidden" asp-for="TaiKhoanId" />

        <div>
            <label asp-for="UserName" class="font-medium text-gray-700">Tên đăng nhập</label>
            <input asp-for="UserName" class="w-full px-4 py-2 border rounded bg-gray-100" disabled />
        </div>

        <div>
            <label asp-for="HoTen" class="font-medium text-gray-700">Họ và tên</label>
            <input asp-for="HoTen" class="w-full px-4 py-2 border rounded" />
            <span asp-validation-for="HoTen" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="Email" class="font-medium text-gray-700">Email</label>
            <input asp-for="Email" type="email" class="w-full px-4 py-2 border rounded" />
            <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="SoDienThoai" class="font-medium text-gray-700">Số điện thoại</label>
            <input asp-for="SoDienThoai" class="w-full px-4 py-2 border rounded" />
            <span asp-validation-for="SoDienThoai" class="text-red-500 text-sm"></span>
        </div>

        @if (Model.NgaySinh != null)
        {
            <div>
                <label asp-for="NgaySinh" class="font-medium text-gray-700">Ngày sinh</label>
                <input asp-for="NgaySinh" type="date" class="w-full px-4 py-2 border rounded" />
                <span asp-validation-for="NgaySinh" class="text-red-500 text-sm"></span>
            </div>
        }

        @if (Model.GioiTinh != null)
        {
            <div>
                <label asp-for="GioiTinh" class="font-medium text-gray-700">Giới tính</label>
                <select asp-for="GioiTinh" class="w-full px-4 py-2 border rounded">
                    <option value="">-- Chọn giới tính --</option>
                    <option value="Nam">Nam</option>
                    <option value="Nữ">Nữ</option>
                    <option value="Khác">Khác</option>
                </select>
                <span asp-validation-for="GioiTinh" class="text-red-500 text-sm"></span>
            </div>
        }

        <div>
            <label asp-for="DiaChi" class="font-medium text-gray-700">Địa chỉ</label>
            <textarea asp-for="DiaChi" rows="3" class="w-full px-4 py-2 border rounded"></textarea>
            <span asp-validation-for="DiaChi" class="text-red-500 text-sm"></span>
        </div>

        <div class="text-center">
            <button type="submit" class="bg-gradient-to-r from-purple-600 to-blue-600 text-white px-6 py-2 rounded hover:from-blue-600 hover:to-purple-600 transition duration-300">
                Lưu Thay Đổi
            </button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
