@model FurryFriends.API.Models.DTO.GioHangDTO
@{
    Layout = "_Layout";
    var selectedVoucherId = ViewBag.VoucherId as Guid?;
    var tienSauGiam = ViewBag.TienSauGiam as decimal?;
    var danhSachVouchers = ViewBag.Vouchers as IEnumerable<FurryFriends.API.Models.Voucher>;
}

@section Styles {
    <style>
        :root {
            --primary-color: #6366f1;
            --secondary-color: #8b5cf6;
            --success-color: #10b981;
            --danger-color: #ef4444;
            --warning-color: #f59e0b;
            --info-color: #06b6d4;
            --light-bg: #f8fafc;
            --dark-text: #1e293b;
            --border-color: #e2e8f0;
            --gradient-primary: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            --gradient-success: linear-gradient(135deg, #10b981 0%, #059669 100%);
            --gradient-danger: linear-gradient(135deg, #ef4444 0%, #dc2626 100%);
            --gradient-info: linear-gradient(135deg, #06b6d4 0%, #0891b2 100%);
        }

        .cart-container {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(20px);
            border-radius: 30px;
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.15);
            margin: 2rem auto;
            max-width: 1200px;
            overflow: hidden;
            position: relative;
        }

        .cart-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: var(--gradient-primary);
        }

        .cart-header {
            background: var(--gradient-primary);
            color: white;
            padding: 3rem 2rem;
            text-align: center;
            position: relative;
            overflow: hidden;
        }

        .cart-header::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: radial-gradient(circle, rgba(255,255,255,0.1) 0%, transparent 70%);
            animation: float 6s ease-in-out infinite;
        }

        @@keyframes float {
            0%, 100% { transform: translateY(0px) rotate(0deg); }
            50% { transform: translateY(-20px) rotate(180deg); }
        }

        .cart-header h1 {
            font-size: 3rem;
            font-weight: 800;
            margin-bottom: 1rem;
            position: relative;
            z-index: 1;
        }

        .cart-header p {
            font-size: 1.2rem;
            opacity: 0.9;
            position: relative;
            z-index: 1;
        }

        .cart-content {
            padding: 3rem 2rem;
        }

        .empty-cart {
            text-align: center;
            padding: 5rem 2rem;
            background: var(--light-bg);
            border-radius: 25px;
            margin: 2rem 0;
            position: relative;
            overflow: hidden;
        }

        .empty-cart::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(45deg, transparent 30%, rgba(99, 102, 241, 0.05) 50%, transparent 70%);
            animation: shimmer 2s infinite;
        }

        @@keyframes shimmer {
            0% { transform: translateX(-100%); }
            100% { transform: translateX(100%); }
        }

        .empty-cart i {
            font-size: 5rem;
            color: var(--primary-color);
            margin-bottom: 1.5rem;
            position: relative;
            z-index: 1;
        }

        .empty-cart h3 {
            color: var(--dark-text);
            margin-bottom: 1rem;
            font-weight: 700;
            position: relative;
            z-index: 1;
        }

        .voucher-section {
            background: linear-gradient(135deg, #fef3c7 0%, #fde68a 100%);
            border: 3px solid #fbbf24;
            border-radius: 20px;
            padding: 2rem;
            margin-bottom: 2rem;
            position: relative;
            overflow: hidden;
        }

        .voucher-section::before {
            content: '';
            position: absolute;
            top: -2px;
            left: -2px;
            right: -2px;
            bottom: -2px;
            background: linear-gradient(45deg, #fbbf24, #f59e0b, #fbbf24);
            border-radius: 20px;
            z-index: -1;
            animation: borderGlow 3s ease-in-out infinite;
        }

        @@keyframes borderGlow {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.7; }
        }

        .voucher-section h4 {
            color: #92400e;
            margin-bottom: 1.5rem;
            font-weight: 700;
            position: relative;
            z-index: 1;
        }

        .cart-items {
            background: white;
            border-radius: 25px;
            overflow: hidden;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            margin-bottom: 2rem;
        }

        .cart-items-header {
            background: var(--gradient-primary);
            color: white;
            padding: 1.5rem 2rem;
            font-weight: 700;
            font-size: 1.1rem;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .cart-item {
            padding: 2rem;
            border-bottom: 1px solid var(--border-color);
            transition: all 0.3s ease;
            position: relative;
        }

        .cart-item:hover {
            background: rgba(99, 102, 241, 0.02);
            transform: translateX(5px);
        }

        .cart-item:last-child {
            border-bottom: none;
        }

        .product-info {
            display: flex;
            align-items: center;
            gap: 1.5rem;
        }

        .product-image {
            width: 80px;
            height: 80px;
            object-fit: cover;
            border-radius: 15px;
            border: 3px solid var(--border-color);
            transition: all 0.3s ease;
        }

        .product-image:hover {
            transform: scale(1.05);
            border-color: var(--primary-color);
        }

        .product-details h6 {
            font-weight: 700;
            margin-bottom: 0.5rem;
            font-size: 1.1rem;
        }

        .product-details small {
            color: #64748b;
            font-weight: 500;
        }

        .quantity-controls {
            display: flex;
            align-items: center;
            gap: 1rem;
            max-width: 250px;
        }

        .quantity-input {
            width: 100px;
            text-align: center;
            border: 2px solid var(--border-color);
            border-radius: 12px;
            padding: 0.75rem;
            font-weight: 600;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        .quantity-input:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
            outline: none;
        }

        .btn-modern {
            border-radius: 12px;
            padding: 0.75rem 1.5rem;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            transition: all 0.3s ease;
            border: none;
            position: relative;
            overflow: hidden;
        }

        .btn-modern::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
            transition: left 0.5s;
        }

        .btn-modern:hover::before {
            left: 100%;
        }

        .btn-modern:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.15);
        }

        .btn-primary-modern {
            background: var(--gradient-primary);
            color: white;
        }

        .btn-success-modern {
            background: var(--gradient-success);
            color: white;
        }

        .btn-danger-modern {
            background: var(--gradient-danger);
            color: white;
        }

        .btn-info-modern {
            background: var(--gradient-info);
            color: white;
        }

        .price-display {
            font-size: 1.3rem;
            font-weight: 800;
            color: var(--success-color);
            text-shadow: 0 1px 2px rgba(0,0,0,0.1);
        }

        .total-section {
            background: linear-gradient(135deg, #f8fafc 0%, #e2e8f0 100%);
            border-radius: 25px;
            padding: 2.5rem;
            margin-top: 2rem;
            position: relative;
            overflow: hidden;
        }

        .total-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: var(--gradient-success);
        }

        .total-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem 0;
            border-bottom: 1px solid var(--border-color);
            font-size: 1.1rem;
            font-weight: 600;
        }

        .total-row:last-child {
            border-bottom: none;
            font-size: 1.8rem;
            font-weight: 800;
            color: var(--success-color);
        }

        .payment-section {
            background: white;
            border-radius: 25px;
            padding: 2.5rem;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            margin-top: 2rem;
            position: relative;
        }

        .payment-section::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: var(--gradient-primary);
        }

        .payment-section h4 {
            color: var(--dark-text);
            margin-bottom: 2rem;
            font-weight: 700;
            font-size: 1.5rem;
        }

        .form-select-modern {
            border: 2px solid var(--border-color);
            border-radius: 12px;
            padding: 1rem;
            font-weight: 500;
            transition: all 0.3s ease;
            background: white;
        }

        .form-select-modern:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
            outline: none;
        }

        .modal-modern .modal-content {
            border-radius: 25px;
            border: none;
            box-shadow: 0 25px 50px rgba(0, 0, 0, 0.2);
            overflow: hidden;
        }

        .modal-modern .modal-header {
            background: var(--gradient-info);
            color: white;
            border-radius: 25px 25px 0 0;
            padding: 2rem;
        }

        .modal-modern .modal-body {
            padding: 2.5rem;
        }

        .modal-modern .modal-footer {
            padding: 2rem;
            border-top: 1px solid var(--border-color);
        }

        @@media (max-width: 768px) {
            .cart-container {
                margin: 1rem;
                border-radius: 20px;
            }

            .cart-header {
                padding: 2rem 1rem;
            }

            .cart-header h1 {
                font-size: 2.5rem;
            }

            .cart-content {
                padding: 1.5rem;
            }

            .cart-item {
                padding: 1.5rem;
            }

            .product-info {
                flex-direction: column;
                text-align: center;
                gap: 1rem;
            }

            .quantity-controls {
                justify-content: center;
                margin: 1rem 0;
            }
        }

        @@media (max-width: 480px) {
            .cart-header h1 {
                font-size: 2rem;
            }

            .total-row {
                flex-direction: column;
                gap: 0.5rem;
                text-align: center;
            }

            .payment-section {
                padding: 1.5rem;
            }
        }
    </style>
}

<div class="cart-container">
    <div class="cart-header">
        <h1><i class="fas fa-shopping-cart"></i> Giỏ hàng của bạn</h1>
        <p>Quản lý và thanh toán đơn hàng một cách dễ dàng</p>
    </div>

    <div class="cart-content">
        @if (Model == null || Model.ChiTietGioHang == null || !Model.ChiTietGioHang.Any())
        {
            <div class="empty-cart">
                <i class="fas fa-shopping-cart"></i>
                <h3>Giỏ hàng trống</h3>
                <p class="text-muted mb-4">Bạn chưa có sản phẩm nào trong giỏ hàng.</p>
                <a href="@Url.Action("Index", "SanPhamKhachHang")" class="btn btn-modern btn-primary-modern">
                    Tiếp tục mua sắm
                </a>
            </div>
        }
        else
        {
            <!-- Voucher Section -->
            <div class="voucher-section">
                <h4><i class="fas fa-ticket-alt"></i> Áp dụng mã giảm giá</h4>
                <form asp-action="Index" method="get" class="grid grid-cols-1 md:grid-cols-4 gap-4 items-end">
                    <div class="md:col-span-3">
                        <select name="voucherId" id="voucherId" class="form-select-modern w-full">
                            <option value="">-- Chọn voucher --</option>
                            @foreach (var voucher in danhSachVouchers)
                            {
                                if (voucher.VoucherId == selectedVoucherId)
                                {
                                    <option value="@voucher.VoucherId" selected>
                                        @voucher.TenVoucher (@voucher.PhanTramGiam.ToString("0")% giảm)
                                    </option>
                                }
                                else
                                {
                                    <option value="@voucher.VoucherId">
                                        @voucher.TenVoucher (@voucher.PhanTramGiam.ToString("0")% giảm)
                                    </option>
                                }
                            }
                        </select>
                    </div>
                    <div>
                        <button type="submit" class="btn btn-modern btn-primary-modern w-full">
                            <i class="fas fa-check-circle"></i> Áp dụng
                        </button>
                    </div>
                </form>
            </div>

            <!-- Cart Items -->
            <div class="cart-items">
                <div class="cart-items-header">
                    <i class="fas fa-list-ul"></i> Sản phẩm trong giỏ hàng (@Model.ChiTietGioHang.Count() sản phẩm)
                </div>
                
                @foreach (var item in Model.ChiTietGioHang)
                {
                    <div class="cart-item">
                        <div class="grid grid-cols-1 md:grid-cols-12 gap-4 items-center">
                            <div class="md:col-span-4">
                                <div class="product-info">
                                    <img src="@($"https://localhost:7289/images/{System.IO.Path.GetFileName(item.AnhSanPham)}")"
                                         class="product-image" alt="@item.TenSanPham" />
                                    <div class="product-details">
                                        <h6>@item.TenSanPham</h6>
                                        <small>Màu: @item.MauSac | Size: @item.KichCo</small>
                                    </div>
                                </div>
                            </div>
                            <div class="md:col-span-2 text-center">
                                <div class="price-display">
                                    @item.DonGia.ToString("N0") đ
                                </div>
                            </div>
                            <div class="md:col-span-3">
                                <form asp-action="UpdateQuantity" method="post" class="quantity-controls">
                                    <input type="hidden" name="chiTietId" value="@item.GioHangChiTietId" />
                                    <input type="hidden" name="voucherId" value="@selectedVoucherId" />
                                    <input type="number" name="soLuong" value="@item.SoLuong" min="1"
                                           class="quantity-input" />
                                    <button type="submit" class="btn btn-modern btn-primary-modern">
                                        <i class="fas fa-sync-alt"></i>
                                    </button>
                                </form>
                            </div>
                            <div class="md:col-span-2 text-center">
                                <div class="price-display">
                                    @item.ThanhTien.ToString("N0") đ
                                </div>
                            </div>
                            <div class="md:col-span-1">
                                <div class="flex gap-2 flex-wrap justify-center">
                                    <button type="button" class="btn btn-modern btn-info-modern" 
                                            onclick="showProductDetails('@item.GioHangChiTietId', '@item.TenSanPham', '@item.MauSac', '@item.KichCo', '@item.DonGia.ToString("N0")', '@item.SoLuong', '@item.ThanhTien.ToString("N0")', '@($"https://localhost:7289/images/{System.IO.Path.GetFileName(item.AnhSanPham)}")')">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                    <form asp-action="Remove" method="post" class="inline">
                                        <input type="hidden" name="chiTietId" value="@item.GioHangChiTietId" />
                                        <input type="hidden" name="voucherId" value="@selectedVoucherId" />
                                        <button type="submit" class="btn btn-modern btn-danger-modern" 
                                                onclick="return confirm('Bạn có chắc muốn xóa sản phẩm này?')">
                                            <i class="fas fa-trash"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Total Section -->
            <div class="total-section">
                <div class="total-row">
                    <span>Tổng cộng:</span>
                    <span class="price-display">@Model.TongTien.ToString("N0") đ</span>
                </div>
                @if (tienSauGiam.HasValue)
                {
                    <div class="total-row">
                        <span>Tổng sau giảm:</span>
                        <span class="price-display text-success">@tienSauGiam.Value.ToString("N0") đ</span>
                    </div>
                }
            </div>

            <!-- Payment Section -->
            <div class="payment-section">
                <h4><i class="fas fa-credit-card"></i> Thông tin thanh toán</h4>
                <form asp-controller="GioHangs" asp-action="ThanhToan" method="post">
                    <input type="hidden" name="KhachHangId" value="@Context.Session.GetString("KhachHangId")" />
                    <input type="hidden" name="VoucherId" value="@selectedVoucherId" />

                    <div class="grid grid-cols-1 md:grid-cols-4 gap-4 items-end">
                        <div class="md:col-span-3">
                            <label for="HinhThucThanhToanId" class="block font-semibold mb-2">
                                <i class="fas fa-university"></i> Hình thức thanh toán:
                            </label>
                            <select name="HinhThucThanhToanId" id="HinhThucThanhToanId" class="form-select-modern w-full" required>
                                <option value="">-- Vui lòng chọn hình thức thanh toán --</option>
                                @foreach (var hinhThuc in ViewBag.HinhThucThanhToanList as IEnumerable<FurryFriends.API.Models.HinhThucThanhToan>)
                                {
                                    <option value="@hinhThuc.HinhThucThanhToanId">@hinhThuc.TenHinhThuc</option>
                                }
                            </select>
                        </div>
                        <div>
                            <button type="submit" class="btn btn-modern btn-success-modern w-full">
                                <i class="fas fa-credit-card"></i> Tiến hành thanh toán
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        }
    </div>
</div>

<!-- Product Details Modal -->
<div id="productModal" class="fixed inset-0 bg-black bg-opacity-50 hidden z-50">
    <div class="flex items-center justify-center min-h-screen p-4">
        <div class="bg-white rounded-3xl max-w-2xl w-full max-h-[90vh] overflow-y-auto">
            <div class="bg-gradient-to-r from-cyan-500 to-blue-500 text-white p-6 rounded-t-3xl">
                <div class="flex justify-between items-center">
                    <h3 class="text-xl font-bold">
                        <i class="fas fa-info-circle"></i> Chi tiết sản phẩm
                    </h3>
                    <button onclick="closeProductModal()" class="text-white hover:text-gray-200">
                        <i class="fas fa-times text-xl"></i>
                    </button>
                </div>
            </div>
            <div class="p-6">
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="text-center">
                        <img id="modalProductImage" src="" class="w-full max-h-80 object-cover rounded-lg" alt="Product" />
                    </div>
                    <div class="space-y-4">
                        <div>
                            <h4 id="modalProductName" class="text-xl font-bold text-gray-800 mb-4"></h4>
                        </div>
                        <div class="grid grid-cols-2 gap-4">
                            <div>
                                <p class="font-semibold text-gray-700">Màu sắc:</p>
                                <p id="modalProductColor" class="text-gray-600"></p>
                            </div>
                            <div>
                                <p class="font-semibold text-gray-700">Kích cỡ:</p>
                                <p id="modalProductSize" class="text-gray-600"></p>
                            </div>
                            <div>
                                <p class="font-semibold text-gray-700">Giá bán:</p>
                                <p id="modalProductPrice" class="price-display"></p>
                            </div>
                            <div>
                                <p class="font-semibold text-gray-700">Số lượng:</p>
                                <p id="modalProductQuantity" class="text-gray-600"></p>
                            </div>
                        </div>
                        <div class="border-t pt-4">
                            <p class="font-semibold text-gray-700">Thành tiền:</p>
                            <p id="modalProductTotal" class="price-display text-2xl"></p>
                        </div>
                    </div>
                </div>
            </div>
            <div class="p-6 border-t border-gray-200">
                <button onclick="closeProductModal()" class="btn btn-modern btn-secondary w-full">
                    <i class="fas fa-times-circle"></i> Đóng
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function showProductDetails(id, name, color, size, price, quantity, total, image) {
            document.getElementById('modalProductName').textContent = name;
            document.getElementById('modalProductColor').textContent = color;
            document.getElementById('modalProductSize').textContent = size;
            document.getElementById('modalProductPrice').textContent = price + ' đ';
            document.getElementById('modalProductQuantity').textContent = quantity;
            document.getElementById('modalProductTotal').textContent = total + ' đ';
            document.getElementById('modalProductImage').src = image;
            document.getElementById('productModal').classList.remove('hidden');
        }

        function closeProductModal() {
            document.getElementById('productModal').classList.add('hidden');
        }

        // Close modal when clicking outside
        document.getElementById('productModal').addEventListener('click', function(e) {
            if (e.target === this) {
                closeProductModal();
            }
        });
    </script>
}
