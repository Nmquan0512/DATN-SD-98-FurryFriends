@model List<FurryFriends.Web.ViewModels.SanPhamViewModel>

@{
    Layout = null; // Không sử dụng layout dùng chung
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <title>Danh sách sản phẩm</title>

    <!-- Thêm Bootstrap 5 -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-4">
        <h2 class="mb-4">Danh sách sản phẩm</h2>

        <div class="row">
            @foreach (var item in Model)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow">
                        <img src="@($"https://localhost:7289/images/{System.IO.Path.GetFileName(item.AnhDaiDienUrl)}")"
                             class="card-img-top"
                             alt="Ảnh sản phẩm"
                             style="height: 250px; object-fit: cover;" />
                        <div class="card-body">
                            <h5 class="card-title">@item.TenSanPham</h5>
                            <p class="card-text">@item.MoTa</p>

                            <a asp-action="Details" asp-route-id="@item.SanPhamId" class="btn btn-primary mb-2">Xem chi tiết</a>

                            <!-- Nút mở modal -->
                            <button type="button"
                                    class="btn btn-success"
                                    data-bs-toggle="modal"
                                    data-bs-target="#addToCartModal-@item.SanPhamId">
                                Thêm vào giỏ
                            </button>

                            <!-- Modal -->
                            <div class="modal fade" id="addToCartModal-@item.SanPhamId" tabindex="-1" aria-labelledby="addToCartModalLabel-@item.SanPhamId" aria-hidden="true">
                                <div class="modal-dialog">
                                    <div class="modal-content">
                                        <form asp-controller="GioHangs" asp-action="AddToCart" method="post">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="addToCartModalLabel-@item.SanPhamId">
                                                    Thêm "@item.TenSanPham" vào giỏ
                                                </h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
                                            </div>
                                            <div class="modal-body">
                                                <input type="hidden" name="SanPhamId" value="@item.SanPhamId" />

                                                <div class="mb-3">
                                                    <label class="form-label">Chọn phân loại sản phẩm:</label>

                                                    @foreach (var chiTiet in item.ChiTietList)
                                                    {
                                                        <div class="form-check border rounded p-2 mb-2">
                                                            <input class="form-check-input"
                                                                   type="radio"
                                                                   name="SanPhamChiTietId"
                                                                   value="@chiTiet.SanPhamChiTietId"
                                                                   id="ct-@chiTiet.SanPhamChiTietId"
                                                                   required />
                                                            <label class="form-check-label w-100" for="ct-@chiTiet.SanPhamChiTietId">
                                                                <strong>@chiTiet.MauSac</strong> - Size: <strong>@chiTiet.KichCo</strong> <br />
                                                                Giá: <strong>@chiTiet.GiaBan.ToString("n0")đ</strong> | Tồn kho: <strong>@chiTiet.SoLuongTon</strong>
                                                            </label>
                                                        </div>
                                                    }
                                                </div>

                                                <div class="mb-3">
                                                    <label for="SoLuong">Số lượng:</label>
                                                    <input type="number" name="SoLuong" class="form-control" value="1" min="1" required />
                                                </div>
                                            </div>

                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                                                <button type="submit" class="btn btn-primary">Thêm vào giỏ</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Thêm Bootstrap JS để modal hoạt động -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
