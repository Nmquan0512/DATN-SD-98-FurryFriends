@model FurryFriends.API.Models.HoaDon

@{
    ViewData["Title"] = "Chi tiết hóa đơn";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Chi tiết hóa đơn</h1>

    @if (TempData["error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card mb-4">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6">
                    <i class="fas fa-file-invoice me-1"></i>
                    Thông tin hóa đơn
                </div>
                <div class="col-md-6 text-end">
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Quay lại
                    </a>
                    <a asp-action="ExportPdf" asp-route-id="@Model.HoaDonId" class="btn btn-primary">
                        <i class="fas fa-file-pdf"></i> Xuất PDF
                    </a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="mb-3">Thông tin khách hàng</h5>
                    <table class="table table-borderless">
                        <tr>
                            <th style="width: 150px;">Tên khách hàng:</th>
                            <td>@Model.TenCuaKhachHang</td>
                        </tr>
                        <tr>
                            <th>Số điện thoại:</th>
                            <td>@Model.SdtCuaKhachHang</td>
                        </tr>
                        <tr>
                            <th>Email:</th>
                            <td>@Model.EmailCuaKhachHang</td>
                        </tr>
                    </table>
                </div>
                <div class="col-md-6">
                    <h5 class="mb-3">Thông tin hóa đơn</h5>
                    <table class="table table-borderless">
                        <tr>
                            <th style="width: 150px;">Mã hóa đơn:</th>
                            <td>@Model.HoaDonId.ToString().Substring(0, 8)</td>
                        </tr>
                        <tr>
                            <th>Ngày tạo:</th>
                            <td>@Model.NgayTao.ToString("dd/MM/yyyy HH:mm")</td>
                        </tr>
                        <tr>
                            <th>Trạng thái:</th>
                            <td>
                                @switch (Model.TrangThai)
                                {
                                    case 0:
                                        <span class="badge bg-warning">Chờ xác nhận</span>
                                        break;
                                    case 1:
                                        <span class="badge bg-info">Đã xác nhận</span>
                                        break;
                                    case 2:
                                        <span class="badge bg-primary">Đang giao</span>
                                        break;
                                    case 3:
                                        <span class="badge bg-success">Hoàn thành</span>
                                        break;
                                    case 4:
                                        <span class="badge bg-danger">Đã hủy</span>
                                        break;
                                    default:
                                        <span class="badge bg-secondary">Không xác định</span>
                                        break;
                                }
                            </td>
                        </tr>
                    </table>
                </div>
            </div>

            <h5 class="mt-4 mb-3">Chi tiết sản phẩm</h5>
            <div class="table-responsive">
                <table class="table table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th>STT</th>
                            <th>Sản phẩm</th>
                            <th class="text-end">Số lượng</th>
                            <th class="text-end">Đơn giá</th>
                            <th class="text-end">Thành tiền</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{
                            int stt = 1;
                            decimal tongTien = 0;
                        }
                        @foreach (var item in Model.HoaDonChiTiets)
                        {
                            var thanhTien = item.SoLuongSanPham * item.Gia;
                            tongTien += thanhTien;
                            <tr>
                                <td>@stt</td>
                                <td>@item.SanPham?.TenSanPham</td>
                                <td class="text-end">@item.SoLuongSanPham</td>
                                <td class="text-end">@item.Gia.ToString("N0") đ</td>
                                <td class="text-end">@thanhTien.ToString("N0") đ</td>
                            </tr>
                            stt++;
                        }
                    </tbody>
                    <tfoot>
                        <tr>
                            <td colspan="4" class="text-end"><strong>Tổng tiền hàng:</strong></td>
                            <td class="text-end">@Model.TongTien.ToString("N0") đ</td>
                        </tr>
                        @if (Model.Voucher != null)
                        {
                            <tr>
                                <td colspan="4" class="text-end"><strong>Giảm giá (@Model.Voucher.PhanTramGiam%):</strong></td>
                                <td class="text-end">-@((Model.TongTien - Model.TongTienSauKhiGiam).ToString("N0")) đ</td>
                            </tr>
                        }
                        <tr>
                            <td colspan="4" class="text-end"><strong>Thành tiền:</strong></td>
                            <td class="text-end"><strong>@Model.TongTienSauKhiGiam.ToString("N0") đ</strong></td>
                        </tr>
                    </tfoot>
                </table>
            </div>

            @if (!string.IsNullOrEmpty(Model.GhiChu))
            {
                <div class="mt-3">
                    <h5>Ghi chú:</h5>
                    <p class="text-muted">@Model.GhiChu</p>
                </div>
            }
        </div>
    </div>
</div> 