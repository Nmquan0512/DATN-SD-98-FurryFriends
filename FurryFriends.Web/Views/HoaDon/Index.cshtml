@model IEnumerable<FurryFriends.API.Models.HoaDon>

@{
    ViewData["Title"] = "Danh sách hóa đơn";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Danh sách hóa đơn</h1>

    @if (TempData["error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card mb-4">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6">
                    <i class="fas fa-table me-1"></i>
                    Danh sách hóa đơn
                </div>
                <div class="col-md-6">
                    <form asp-action="Search" method="get" class="d-flex">
                        <input type="text" name="keyword" class="form-control me-2" placeholder="Tìm kiếm theo tên, SĐT, email...">
                        <button type="submit" class="btn btn-primary">
                            <i class="fas fa-search"></i> Tìm kiếm
                        </button>
                    </form>
                </div>
            </div>
        </div>
        <div class="card-body">
            <table id="hoaDonTable" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Mã HĐ</th>
                        <th>Khách hàng</th>
                        <th>Số điện thoại</th>
                        <th>Ngày tạo</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.HoaDonId.ToString().Substring(0, 8)</td>
                            <td>@item.TenCuaKhachHang</td>
                            <td>@item.SdtCuaKhachHang</td>
                            <td>@item.NgayTao.ToString("dd/MM/yyyy HH:mm")</td>
                            <td>@item.TongTienSauKhiGiam.ToString("N0") đ</td>
                            <td>
                                @switch (item.TrangThai)
                                {
                                    case 0:
                                        <span class="badge bg-warning">Chờ xác nhận</span>
                                        break;
                                    case 1:
                                        <span class="badge bg-info">Đã xác nhận</span>
                                        break;
                                    case 2:
                                        <span class="badge bg-primary">Đang giao</span>
                                        break;
                                    case 3:
                                        <span class="badge bg-success">Hoàn thành</span>
                                        break;
                                    case 4:
                                        <span class="badge bg-danger">Đã hủy</span>
                                        break;
                                    default:
                                        <span class="badge bg-secondary">Không xác định</span>
                                        break;
                                }
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Details" asp-route-id="@item.HoaDonId" class="btn btn-info btn-sm">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a asp-action="ExportPdf" asp-route-id="@item.HoaDonId" class="btn btn-primary btn-sm">
                                        <i class="fas fa-file-pdf"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#hoaDonTable').DataTable({
                language: {
                    url: '//cdn.datatables.net/plug-ins/1.13.7/i18n/vi.json'
                }
            });
        });
    </script>
} 