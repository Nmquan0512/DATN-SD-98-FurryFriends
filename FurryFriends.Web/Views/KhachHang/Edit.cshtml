@model FurryFriends.API.Models.KhachHang
<h2>Chỉnh sửa Khách Hàng</h2>
<form asp-action="Edit">
    <input type="hidden" asp-for="KhachHangId" />
    <div class="form-group">
        <label asp-for="TenKhachHang"></label>
        <input asp-for="TenKhachHang" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="SDT"></label>
        <input asp-for="SDT" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="EmailCuaKhachHang"></label>
        <input asp-for="EmailCuaKhachHang" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DiemKhachHang"></label>
        <input asp-for="DiemKhachHang" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="TrangThai"></label>
        <select asp-for="TrangThai" class="form-control">
            <option value="1">Hoạt động</option>
            <option value="0">Khoá</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="TaiKhoanId"></label>
        <select asp-for="TaiKhoanId" class="form-control" asp-items="ViewBag.TaiKhoanList"></select>
    </div>
    <button type="submit" class="btn btn-primary">Cập nhật</button>
    <a asp-action="Index" class="btn btn-secondary">Huỷ</a>
</form>