@model FurryFriends.API.Models.KhachHang
@{
    var diaChiList = ViewBag.DiaChiList as List<FurryFriends.API.Models.DiaChiKhachHang>;
    var hoaDonList = ViewBag.HoaDonList as List<FurryFriends.API.Models.HoaDon>;
    var gioHangList = ViewBag.GioHangList as List<FurryFriends.API.Models.GioHang>;
}

<h2>Chi tiết Khách Hàng</h2>
<table class="table">
    <tr><th>Tên</th><td>@Model.TenKhachHang</td></tr>
    <tr><th>Email</th><td>@Model.EmailCuaKhachHang</td></tr>
    <tr><th>SĐT</th><td>@Model.SDT</td></tr>
    <tr><th>Điểm</th><td>@Model.DiemKhachHang</td></tr>
    <tr><th>Trạng thái</th><td>@(Model.TrangThai == 1 ? "Hoạt động" : "Khoá")</td></tr>
</table>

<h3>Địa chỉ</h3>
<table class="table">
    <thead><tr><th>Tên</th><th>Thành phố</th><th>Quận</th><th>Phường</th><th>Ngày tạo</th></tr></thead>
    <tbody>
        @foreach (var dc in diaChiList)
        {
            <tr><td>@dc.TenDiaChi</td><td>@dc.ThanhPho</td><td>@dc.QuanHuyen</td><td>@dc.PhuongXa</td><td>@dc.NgayTao.ToString("dd/MM/yyyy")</td></tr>
        }
    </tbody>
</table>

<h3>Hóa đơn</h3>
<table class="table">
    <thead><tr><th>Ngày tạo</th><th>Tổng tiền</th><th>Ghi chú</th></tr></thead>
    <tbody>
        @foreach (var hd in hoaDonList)
        {
            <tr><td>@hd.NgayTao.ToString("dd/MM/yyyy")</td><td>@hd.TongTienSauKhiGiam.ToString("N0")</td><td>@hd.GhiChu</td></tr>
        }
    </tbody>
</table>

<h3>Giỏ hàng</h3>
<table class="table">
    <thead><tr><th>Ngày tạo</th><th>Ngày cập nhật</th><th>Trạng thái</th></tr></thead>
    <tbody>
        @foreach (var gh in gioHangList)
        {
            <tr><td>@gh.NgayTao.ToString("dd/MM/yyyy")</td><td>@gh.NgayCapNhat?.ToString("dd/MM/yyyy")</td><td>@(gh.TrangThai ? "Đang hoạt động" : "Đã xoá")</td></tr>
        }
    </tbody>
</table>
